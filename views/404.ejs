<!-- views/404.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs', {
    pageTitle: '404 - Page Not Found',
    pageDescription: 'The page you’re looking for could not be found on BookLantern.'
  }) %>
  <style>
    :root{
      --bg:#f4f4f4;
      --primary:#e50914;
      --text:#333;
      --link:#0077cc;
      --font:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,Arial,sans-serif;
    }
    body{
      margin:0;
      padding:3rem 1rem;
      background:var(--bg);
      font-family:var(--font);
      color:var(--text);
      text-align:center;
    }
    h1{
      margin:0 0 1rem;
      font-size:3rem;
      color:var(--primary);
    }
    p{
      margin:.5rem 0 1.5rem;
      font-size:1.1rem;
      line-height:1.6;
    }
    a.btn{
      display:inline-block;
      padding:.75rem 1.5rem;
      background:var(--link);
      color:#fff;
      text-decoration:none;
      border-radius:6px;
      font-weight:600;
      transition:opacity .15s;
    }
    a.btn:hover{opacity:.85;}
  </style>
</head>
<body>
  <h1>404</h1>
  <p>The page you’re looking for doesn’t exist or may have been moved.</p>
  <a class="btn" href="/">← Back to Home</a>
</body>
</html>
