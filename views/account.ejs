<%- include('./partials/head', { pageTitle: 'Your Account - BookLantern' }) %>
<body>
  <%- include('./partials/navbar') %>

  <main class="stack" style="--gap:20px; max-width:880px; margin:40px auto;">
    <h1>Your Account</h1>

    <% if (user) { %>
      <div class="card stack" style="--gap:12px; padding:16px;">
        <div><strong>Name:</strong> <%= user.name %></div>
        <div><strong>Email:</strong> <%= user.email %></div>
        <div><strong>Role:</strong> <%= user.role %></div>
      </div>
    <% } else { %>
      <div class="card" style="padding:16px;">
        Could not load your account details.
      </div>
    <% } %>
  </main>

  <%- include('./partials/footer') %>
</body>
</html>
