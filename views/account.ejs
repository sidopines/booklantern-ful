<!doctype html>
<html lang="en">
<head>
  <%- include('./partials/head', { pageTitle: 'Your Account - BookLantern' }) %>
</head>
<body>
  <%- include('./partials/navbar') %>

  <main class="stack" style="--gap:20px; max-width:880px; margin:40px auto; padding:0 16px;">
    <h1>Your Account</h1>

    <div id="ssrBlock" style="<%= user ? '' : 'display:none' %>">
      <% if (user) { %>
        <div class="card stack" style="--gap:12px; padding:16px;">
          <div><strong>Name:</strong>  <%= user.name  || '-' %></div>
          <div><strong>Email:</strong> <%= user.email || '-' %></div>
          <div><strong>Role:</strong>  <%= user.role  || 'subscriber' %></div>
          <button id="signOutSsr" class="btn">Sign out</button>
        </div>
      <% } %>
    </div>

    <div id="csrBlock" style="<%= user ? 'display:none' : '' %>">
      <div class="card stack" style="--gap:12px; padding:16px;">
        <div id="who">Loading your accountâ€¦</div>
        <div class="row" style="gap:8px;">
          <button id="signOut" class="btn">Sign out</button>
          <a class="btn" href="/">Back to Home</a>
        </div>
      </div>
    </div>
  </main>

  <%- include('./partials/footer') %>

  <script>
    // Use the already-created global client
    const sb = window.supabaseClient;

    (async () => {
      // If server didn't render a user, try client side
      const csrBlock = document.getElementById('csrBlock');
      if (csrBlock && csrBlock.style.display !== 'none') {
        const who = document.getElementById('who');
        const { data: { session } } = await sb.auth.getSession();
        if (!session) {
          location.replace('/login');
          return;
        }
        who.textContent = `Logged in as ${session.user.email}`;
      }

      const so = document.getElementById('signOut');
      const so2 = document.getElementById('signOutSsr');
      const signOut = async () => { await sb.auth.signOut(); location.replace('/'); };
      if (so)  so.addEventListener('click',  signOut);
      if (so2) so2.addEventListener('click', signOut);
    })();
  </script>
</body>
</html>
