<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Dashboard - BookLantern</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <header>
    <div>ðŸ“š BookLantern</div>
    <nav>
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
      <a href="/watch">Watch</a>
      <a href="/admin">Admin</a>
      <a href="/login">Login</a>
      <a href="/register">Register</a>
    </nav>
    <div class="toggle-container">
      <label class="toggle-switch">
        <input type="checkbox" id="darkModeToggle" />
        <span class="slider"></span>
      </label>
    </div>
  </header>

  <main>
    <h1>ðŸŽ› Admin Control Panel</h1>

    <!-- Video Upload Form -->
    <section>
      <h2>Add New Video</h2>
      <form action="/admin/add-video" method="POST">
        <label>Title:</label>
        <input type="text" name="title" required />

        <label>Genre:</label>
        <input type="text" name="genre" required />

        <label>YouTube URL:</label>
        <input type="url" name="youtubeUrl" required />

        <label>Thumbnail URL (optional):</label>
        <input type="url" name="thumbnail" />

        <label>Description (optional):</label>
        <textarea name="description"></textarea>

        <button type="submit">âž• Add Video</button>
      </form>
    </section>

    <!-- Video Management Table -->
    <section>
      <h2>ðŸ“¼ Manage Videos</h2>
      <% if (videos && videos.length > 0) { %>
        <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Genre</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% videos.forEach(video => { %>
              <tr>
                <td><%= video.title %></td>
                <td><%= video.genre %></td>
                <td>
                  <form action="/admin/delete-video/<%= video._id %>" method="POST" onsubmit="return confirm('Delete this video?');">
                    <button type="submit" class="delete-btn">ðŸ—‘ Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No videos found.</p>
      <% } %>
    </section>
  </main>

  <footer>
    &copy; <%= new Date().getFullYear() %> BookLantern. Admin Panel.
  </footer>

  <script>
    const toggle = document.getElementById("darkModeToggle");
    toggle.addEventListener("change", () => {
      document.body.classList.toggle("dark-mode", toggle.checked);
    });
  </script>
</body>
</html>
