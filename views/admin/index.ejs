<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
  <title>Admin • Dashboard</title>
  <style>
    .wrap{max-width:1080px;margin:24px auto 64px;padding:0 16px;}
    .grid{
      display:grid;
      grid-template-columns:repeat(auto-fit,minmax(220px,1fr));
      gap:16px;
    }
    .card{background:#fff;border:1px solid #eee;border-radius:14px;padding:16px}
    .num{font-size:28px;font-weight:700;margin:8px 0}
    .links a{margin-right:12px}
  </style>
</head>
<body>
  <%- include('../partials/header'); %>

  <main class="wrap">
    <h1>Admin • Dashboard</h1>

    <section class="grid" style="margin:16px 0 24px;">
      <div class="card">
        <div>Users</div>
        <div class="num"><%= (counts && counts.usersCount)  || 0 %></div>
        <div class="links"><a href="/admin/users">Open</a></div>
      </div>
      <div class="card">
        <div>Books</div>
        <div class="num"><%= (counts && counts.booksCount)  || 0 %></div>
        <div class="links"><a href="/admin/books">Manage</a></div>
      </div>
      <div class="card">
        <div>Videos</div>
        <div class="num"><%= (counts && counts.videosCount) || 0 %></div>
        <div class="links"><a href="/admin/videos">Manage</a></div>
      </div>
      <div class="card">
        <div>Video Genres</div>
        <div class="num"><%= (counts && counts.genresCount) || 0 %></div>
        <div class="links"><a href="/admin/video-genres">Manage</a></div>
      </div>
    </section>

    <p><a href="/admin/books">Books</a> • <a href="/admin/videos">Videos</a> • <a href="/admin/video-genres">Video genres</a> • <a href="/admin/users">Users</a></p>
  </main>

  <%- include('../partials/footer'); %>
</body>
</html>
