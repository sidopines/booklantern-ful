<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header'); %>
  <title>Admin • Videos</title>
  <style>
    .wrap{max-width:1040px;margin:24px auto;padding:0 16px}
    .grid{display:grid;grid-template-columns:1fr 1fr;gap:24px}
    .card{background:#fff;border:1px solid #e5e7eb;border-radius:12px;padding:16px}
    .row{display:flex;gap:12px;align-items:center;flex-wrap:wrap}
    label{font-weight:600;margin-top:8px;display:block}
    input[type="text"], input[type="url"], select, textarea{
      width:100%;padding:10px 12px;border:1px solid #d1d5db;border-radius:10px;font:inherit
    }
    .muted{color:#6b7280}
    .list{display:grid;grid-template-columns:repeat(auto-fill,minmax(280px,1fr));gap:16px}
    .thumb{width:100%;aspect-ratio:16/9;background:#f3f4f6;border-radius:10px;display:flex;align-items:center;justify-content:center;overflow:hidden}
    .thumb img{max-width:100%;max-height:100%}
    .tag{display:inline-block;padding:2px 8px;border-radius:999px;background:#f1f5f9;font-size:12px;margin:2px 4px 0 0}
    .btn{padding:10px 14px;border-radius:10px;border:1px solid #e5e7eb;background:#111827;color:#fff;font-weight:600}
    .btn.secondary{background:#fff;color:#111;border:1px solid #d1d5db}
    .searchbox{position:relative}
    .searchbox input{padding-left:34px}
    .searchbox svg{position:absolute;left:10px;top:50%;transform:translateY(-50%);width:16px;height:16px;color:#9ca3af}
    .help{font-size:12px;color:#6b7280}
  </style>
</head>
<body>
  <%- include('../partials/navbar'); %>
  <main class="wrap">
    <h1 style="margin:8px 0 16px;">Admin · Videos</h1>

    <% const VIDS = Array.isArray(videos) ? videos : []; %>
    <% const GENRES = Array.isArray(genres) ? genres : []; %>

    <div class="grid">
      <!-- Create / Edit -->
      <section class="card">
        <h2 style="margin:0 0 12px">Add a video</h2>
        <% if (messages && messages.error) { %>
          <div style="background:#fef2f2;border:1px solid #fecaca;padding:10px;border-radius:10px;margin-bottom:10px;color:#991b1b">
            <%= messages.error %>
          </div>
        <% } %>
        <% if (messages && messages.success) { %>
          <div style="background:#ecfdf5;border:1px solid #a7f3d0;padding:10px;border-radius:10px;margin-bottom:10px;color:#065f46">
            <%= messages.success %>
          </div>
        <% } %>

        <form method="POST" action="/admin/videos" id="videoForm">
          <label for="title">Title</label>
          <input id="title" name="title" type="text" placeholder="Video title" required>

          <label for="url">Source URL (YouTube, Vimeo, etc.)</label>
          <input id="url" name="url" type="url" placeholder="https://www.youtube.com/watch?v=…" required>

          <label for="channel">Channel / Publisher <span class="help">(optional)</span></label>
          <input id="channel" name="channel" type="text" placeholder="@BOOKLANTERN or channel name">

          <label for="thumbnail">Thumbnail URL <span class="help">(optional — auto-filled for YouTube)</span></label>
          <input id="thumbnail" name="thumbnail" type="url" placeholder="https://…/thumb.jpg">

          <div class="row" style="margin-top:8px">
            <div style="flex:1">
              <label for="genreSearch">Genres</label>
              <!-- searchable multi-select (vanilla) -->
              <div class="searchbox">
                <svg viewBox="0 0 24 24" fill="none"><path d="M21 21l-4.3-4.3M10.5 18a7.5 7.5 0 1 1 0-15 7.5 7.5 0 0 1 0 15z" stroke="currentColor" stroke-width="2"/></svg>
                <input id="genreSearch" type="text" placeholder="Search genres…">
              </div>
              <select id="genres" name="genres" multiple size="6" style="margin-top:8px">
                <% GENRES.forEach(g => { %>
                  <option value="<%= g.id %>"><%= g.name %></option>
                <% }) %>
              </select>
              <div class="help">Hold ⌘/Ctrl to select multiple.</div>
            </div>
            <div style="width:320px">
              <label>Live thumbnail preview</label>
              <div class="thumb" id="thumbPreview">
                <img id="thumbImg" alt="" style="display:none">
                <span class="muted" id="thumbEmpty">No thumbnail</span>
              </div>
            </div>
          </div>

          <label for="newGenres" style="margin-top:8px">Or add new genres (comma-separated)</label>
          <input id="newGenres" name="newGenres" type="text" placeholder="General, History">

          <div class="row" style="margin-top:14px">
            <button type="submit" class="btn">Save</button>
            <a class="btn secondary" href="/admin/videos">Reset</a>
          </div>
        </form>
      </section>

      <!-- Existing -->
      <section class="card">
        <h2 style="margin:0 0 12px">Existing videos <span class="muted">(<%= VIDS.length %>)</span></h2>
        <div class="list">
          <% VIDS.forEach(v => { %>
            <article class="card" style="padding:12px">
              <div class="thumb">
                <% if (v.thumb) { %>
                  <img src="<%= v.thumb %>" alt="">
                <% } else { %>
                  <img src="/public/img/cover-fallback.svg" alt="" style="width:64px;height:64px;opacity:.6">
                <% } %>
              </div>
              <h3 style="font-size:16px;margin:10px 0 6px"><%= v.title %></h3>
              <% if (v.channel) { %><div class="muted">by <%= v.channel %></div><% } %>
              <div class="row" style="justify-content:space-between;margin-top:8px">
                <% if (v.url) { %>
                  <a class="btn secondary" href="/video/<%= v.id %>">Open</a>
                <% } %>
                <form method="POST" action="/admin/videos/delete" onsubmit="return confirm('Delete this video?')">
                  <input type="hidden" name="id" value="<%= v.id %>">
                  <button type="submit" class="btn" style="background:#b91c1c">Delete</button>
                </form>
              </div>
            </article>
          <% }) %>
        </div>
      </section>
    </div>
  </main>

  <%- include('../partials/footer'); %>

  <script>
    // --- derive YouTube thumbnail if user types a YT URL ---
    const urlEl   = document.getElementById('url');
    const thumbEl = document.getElementById('thumbnail');
    const img     = document.getElementById('thumbImg');
    const empty   = document.getElementById('thumbEmpty');

    function ytId(u){
      try{
        const url = new URL(u);
        if (url.hostname.includes('youtu.be')) return url.pathname.split('/')[1] || '';
        if (url.pathname.startsWith('/shorts/')) return url.pathname.split('/')[2] || '';
        if (url.searchParams.get('v')) return url.searchParams.get('v');
        const m = url.pathname.match(/\/(embed|live)\/([^/?#]+)/);
        return m ? m[2] : '';
      }catch(_e){ return ''; }
    }
    function setPreview(src){
      if (src) {
        img.src = src; img.style.display = ''; empty.style.display='none';
      } else {
        img.removeAttribute('src'); img.style.display='none'; empty.style.display='';
      }
    }
    function maybeFillThumb(){
      const id = ytId(urlEl.value);
      if (!thumbEl.value && id) {
        thumbEl.value = `https://i.ytimg.com/vi/${id}/hqdefault.jpg`;
      }
      setPreview(thumbEl.value);
    }
    urlEl.addEventListener('input', maybeFillThumb);
    thumbEl.addEventListener('input', () => setPreview(thumbEl.value));
    maybeFillThumb();

    // --- tiny searchable multi-select ---
    const search = document.getElementById('genreSearch');
    const select = document.getElementById('genres');
    const options = Array.from(select.options);
    search.addEventListener('input', () => {
      const q = search.value.toLowerCase().trim();
      select.innerHTML = '';
      options
        .filter(o => !q || o.text.toLowerCase().includes(q))
        .forEach(o => select.appendChild(o));
    });
  </script>
</body>
</html>
