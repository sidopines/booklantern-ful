<!-- views/contact.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/header.ejs', {
    pageTitle: 'Contact',
    pageDescription: 'Get in touch with the BookLantern team.'
  }) %>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0; background-color: #f9f9f9; color: #333;
    }
    .back-link {
      display: inline-block;
      margin: 1rem;
      color: #0077cc;
      text-decoration: none;
      font-size: 0.9rem;
    }
    .back-link:hover { text-decoration: underline; }
    .container { max-width:700px; margin:0 auto; padding:2rem; }
    /* ... rest of your existing styles ... */
  </style>
</head>
<body>
  <a href="javascript:history.back()" class="back-link">‚Üê Back</a>
  <div class="container">
    <h1>Contact Us</h1>
    <p>We'd love to hear from you! ...</p>
    <form action="https://formspree.io/f/mqalkpkn" method="POST">
      <input type="text" name="name" placeholder="Your Name" required />
      <input type="email" name="email" placeholder="Your Email" required />
      <textarea name="message" rows="6" placeholder="Your Message" required></textarea>
      <button type="submit">Send Message</button>
    </form>
  </div>
</body>
</html>
