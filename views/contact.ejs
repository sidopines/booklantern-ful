<%- include('./partials/head', { pageTitle: 'Contact — BookLantern' }) %>
<body>
  <%- include('./partials/navbar') %>

  <section class="hero">
    <div class="container inner stack" style="--gap:10px">
      <%- include('./partials/backLink') %>
      <h1>Contact us</h1>
      <p class="muted">Questions, ideas, or feedback? We’d love to hear from you.</p>
    </div>
  </section>

  <main class="container stack" style="--gap:20px">
    <form class="card stack" style="--gap:12px;max-width:720px;margin:0 auto">
      <input class="input" name="name" placeholder="Your name">
      <input class="input" name="email" placeholder="Email address">
      <textarea class="textarea" name="message" placeholder="How can we help?"></textarea>
      <button class="btn" type="submit">Send</button>
    </form>
  </main>

  <%- include('./partials/footer') %>
