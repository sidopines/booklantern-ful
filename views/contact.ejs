<!doctype html>
<html lang="en">
<head>
  <%- include('./partials/head', {
    pageTitle: 'Contact • BookLantern',
    pageDescription: 'We’d love to hear from you. Send questions or feedback any time.',
    canonicalUrl: (typeof canonicalUrl !== 'undefined' ? canonicalUrl : '')
  }) %>
</head>
<body>
  <%- include('./partials/navbar') %>

  <main class="container" style="max-width: 960px; padding: 24px 16px;">
    <% var __safeRef = (typeof referrer !== 'undefined' ? referrer : null); %>
    <%- include('./partials/backLink', { referrer: __safeRef }) %>

    <header style="margin: 6px 0 18px;">
      <h1 style="margin:0 0 6px;">Contact Us</h1>
      <p style="opacity:.8; margin:0;">
        We’d love to hear from you. Send questions or feedback any time.
      </p>
    </header>

    <!-- Flash messages -->
    <section class="stack" style="--gap:10px; margin: 10px 0 18px;">
      <% if (typeof error !== 'undefined' && error) { %>
        <%- include('./partials/flash', { message: error, type: 'error' }) %>
      <% } %>
      <% if (typeof sent !== 'undefined' && sent) { %>
        <%- include('./partials/flash', {
          message: 'Thanks! We received your message and will get back to you soon.',
          type: 'success'
        }) %>
      <% } %>
    </section>

    <!-- Contact form -->
    <form class="stack card" action="/contact" method="post"
          style="--gap:14px; padding:16px;">
      <div class="stack" style="--gap:6px;">
        <label for="name">Your Name</label>
        <input id="name" name="name" class="input" type="text" placeholder="Your name"
               required autocomplete="name">
      </div>

      <div class="stack" style="--gap:6px;">
        <label for="email">Your Email</label>
        <input id="email" name="email" class="input" type="email" placeholder="you@example.com"
               required autocomplete="email">
      </div>

      <div class="stack" style="--gap:6px;">
        <label for="message">Your Message</label>
        <textarea id="message" name="message" class="input" rows="6"
                  placeholder="Write your message…" required></textarea>
      </div>

      <div class="row" style="gap:8px;">
        <button class="btn btn-primary" type="submit" style="min-width:150px;">
          Send Message
        </button>
      </div>
    </form>

    <!-- Helpful links -->
    <div class="row" style="gap:12px; margin-top:14px;">
      <a class="btn" href="/privacy" aria-label="Read our privacy policy">Privacy</a>
      <a class="btn" href="/terms" aria-label="Read our terms of use">Terms</a>
    </div>
  </main>

  <%- include('./partials/footer') %>
</body>
</html>
