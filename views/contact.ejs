<%- include('./partials/head', {
  pageTitle: 'Contact • BookLantern',
  pageDescription: 'Get in touch with the BookLantern team.'
}) %>
<body>
  <%- include('./partials/navbar') %>

  <main class="container" style="padding:28px 0 44px">
    <a href="/" class="muted" style="font-size:14px">← Back</a>

    <section class="card" style="margin-top:16px">
      <h1 style="margin:0 0 8px 0">Contact Us</h1>
      <p class="muted" style="margin:0">We’d love to hear from you. Send questions or feedback any time.</p>
    </section>

    <section class="card" style="margin-top:16px;max-width:720px">
      <% const msgs = (typeof messages !== 'undefined' && messages) ? messages : {}; %>
      <% if (msgs.success) { %>
        <div style="background:rgba(52,211,153,.12);border:1px solid rgba(52,211,153,.4);color:#c3f3e3;padding:10px;border-radius:10px;margin-bottom:10px">
          <%= msgs.success %>
        </div>
      <% } %>
      <% if (msgs.error) { %>
        <div style="background:rgba(255,93,115,.12);border:1px solid rgba(255,93,115,.35);color:#ffd1d8;padding:10px;border-radius:10px;margin-bottom:10px">
          <%= msgs.error %>
        </div>
      <% } %>

      <form class="stack" style="--gap:10px" method="post" action="/contact">
        <input type="hidden" name="_csrf" value="<%= (typeof csrfToken !== 'undefined' ? csrfToken : '') %>">
        <label class="muted" for="name">Your Name</label>
        <input class="input" id="name" name="name" required placeholder="Your name">

        <label class="muted" for="email">Your Email</label>
        <input class="input" id="email" name="email" type="email" required placeholder="you@example.com">

        <label class="muted" for="message">Your Message</label>
        <textarea class="input" id="message" name="message" rows="5" required placeholder="Write your message…"></textarea>

        <div style="display:flex;justify-content:flex-end;margin-top:6px">
          <button class="btn" type="submit">Send Message</button>
        </div>
      </form>
    </section>
  </main>

  <%- include('./partials/footer') %>
