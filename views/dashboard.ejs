<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Dashboard | BookLantern</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f9f9f9;
      margin: 0;
      padding: 2rem;
    }
    h1 {
      color: #333;
    }
    .nav {
      margin-bottom: 2rem;
    }
    .nav a {
      margin-right: 1rem;
      text-decoration: none;
      color: #0077cc;
    }
    .nav a:hover {
      text-decoration: underline;
    }
    .button {
      display: inline-block;
      padding: 0.5rem 1rem;
      margin-top: 1rem;
      background-color: #0077cc;
      color: white;
      text-decoration: none;
      border-radius: 4px;
    }
    .button:hover {
      background-color: #005fa3;
    }
  </style>
</head>
<body>
  <h1>Welcome, <%= user.name %>!</h1>

  <div class="nav">
    <a href="/watch">🎬 Watch Videos</a>
    <a href="/read">📖 Read Books</a>
    <a href="/settings">⚙️ Settings</a>
    <a href="/logout">🚪 Logout</a>
  </div>

  <p>Start reading, watching, and saving your favorite books and videos!</p>

  <a href="/settings" class="button">Change Password</a>
</body>
</html>
