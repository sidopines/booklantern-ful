<%- include('./partials/head', { pageTitle: 'Dashboard - BookLantern' }) %>
<body>
  <%- include('./partials/navbar') %>

  <main class="stack" style="--gap:18px; max-width:1100px; margin:30px auto;">
    <h1>Your Dashboard</h1>

    <% if (user) { %>
      <div class="card" style="padding:16px;">
        <strong>Welcome, <%= user.name %></strong><br>
        <span class="muted"><%= user.email %></span>
      </div>
    <% } %>

    <div class="card" style="padding:16px;">
      <h2 style="margin-top:0;">Saved & Recent</h2>
      <div class="muted">Coming soon: saved books, notes, bookmarks.</div>
    </div>
  </main>

  <%- include('./partials/footer') %>
</body>
</html>
