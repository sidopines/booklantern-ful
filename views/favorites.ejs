<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/header.ejs', {
    pageTitle: 'My Favorite Books',
    pageDescription: "Browse the books you've favorited on BookLantern."
  }) %>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      background: #f8f8f8;
      color: #333;
    }
    .wrap {
      max-width: 1100px;
      margin: 2rem auto;
      padding: 1rem 2rem;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }
    .back {
      display: inline-block;
      margin: 1rem 2rem 0;
      font-size: 0.9rem;
      color: #0077cc;
      text-decoration: none;
    }
    .back:hover {
      text-decoration: underline;
    }
    h1 {
      margin-top: 0;
      font-size: 1.8rem;
    }
    .book-list {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
      gap: 1.5rem;
      margin-top: 1.5rem;
    }
    .book-card {
      background: white;
      padding: 0.75rem;
      border-radius: 10px;
      box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      position: relative;
    }
    .book-card .cover {
      width: 120px;
      height: 170px;
      object-fit: cover;
      border-radius: 4px;
      background: #eee;
      margin-bottom: 0.75rem;
    }
    .book-card .no-cover {
      width: 120px;
      height: 170px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border-radius: 4px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 2rem;
      margin-bottom: 0.75rem;
    }
    .book-card h3 {
      font-size: 0.95rem;
      margin: 0 0 0.3rem;
      line-height: 1.3;
      max-height: 2.6rem;
      overflow: hidden;
    }
    .book-card .author {
      font-size: 0.8rem;
      color: #666;
      margin-bottom: 0.5rem;
    }
    .book-card .actions {
      display: flex;
      gap: 0.5rem;
      margin-top: auto;
    }
    .book-card .read-btn {
      padding: 0.4rem 0.8rem;
      background: #0077cc;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
      font-size: 0.85rem;
    }
    .book-card .read-btn:hover {
      background: #005fa3;
    }
    .book-card .remove-btn {
      padding: 0.4rem 0.6rem;
      background: #dc2626;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 0.85rem;
    }
    .book-card .remove-btn:hover {
      background: #b91c1c;
    }
    .empty-state {
      text-align: center;
      padding: 3rem 1rem;
      color: #666;
    }
    .empty-state p {
      margin-bottom: 1rem;
    }
    .empty-state a {
      color: #0077cc;
    }
  </style>
</head>
<body>
  <%- include('./partials/navbar.ejs') %>
  
  <a href="/read" class="back">‚Üê Back to Search</a>
  <div class="wrap">
    <h1>üìö My Favorite Books</h1>

    <% if (!favorites || favorites.length === 0) { %>
      <div class="empty-state">
        <p>You haven't added any books to your favorites yet.</p>
        <p><a href="/read">Browse books</a> and click the ‚ù§Ô∏è button to add favorites!</p>
      </div>
    <% } else { %>
      <div class="book-list">
        <% favorites.forEach(fav => { %>
          <div class="book-card" data-book-key="<%= fav.bookKey %>">
            <% if (fav.cover) { %>
              <img class="cover" src="<%= fav.cover %>" alt="<%= fav.title %> cover" loading="lazy">
            <% } else { %>
              <div class="no-cover">üìñ</div>
            <% } %>
            <h3><%= fav.title %></h3>
            <% if (fav.author) { %>
              <div class="author"><%= fav.author %></div>
            <% } %>
            <div class="actions">
              <a href="/open?provider=<%= encodeURIComponent(fav.source || 'unknown') %>&provider_id=<%= encodeURIComponent(fav.bookKey) %>&title=<%= encodeURIComponent(fav.title) %>&author=<%= encodeURIComponent(fav.author || '') %>&cover=<%= encodeURIComponent(fav.cover || '') %>" class="read-btn">üìñ Read</a>
              <button class="remove-btn" data-remove-key="<%= fav.bookKey %>" data-title="<%= fav.title %>">‚úï</button>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <%- include('./partials/footer.ejs') %>

  <script>
    // Handle remove button clicks
    document.querySelectorAll('[data-remove-key]').forEach(function(btn) {
      btn.addEventListener('click', function() {
        var bookKey = this.getAttribute('data-remove-key');
        var title = this.getAttribute('data-title');
        if (!confirm('Remove "' + title + '" from favorites?')) return;
        
        fetch('/api/reading/favorite', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'include',
          body: JSON.stringify({ bookKey: bookKey, title: title })
        })
        .then(function(r) { return r.json(); })
        .then(function(data) {
          if (data.ok && !data.favorited) {
            // Remove card from DOM
            var card = document.querySelector('[data-book-key="' + bookKey + '"]');
            if (card) card.remove();
            // Check if list is empty
            var remaining = document.querySelectorAll('.book-card');
            if (remaining.length === 0) {
              location.reload();
            }
          }
        })
        .catch(function(err) {
          console.error('Remove failed:', err);
          alert('Failed to remove. Please try again.');
        });
      });
    });
  </script>
</body>
</html>
