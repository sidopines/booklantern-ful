<!doctype html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs', {
    pageTitle: 'BookLantern — Largest Online Hub of Free Books',
    pageDescription: 'Millions of books from globally trusted libraries. One search, one clean reader.'
  }) %>
</head>
<body>
  <%- include('./partials/navbar.ejs') %>

  <!-- Hero -->
  <header class="hero">
    <div class="container hero-inner">
      <h1>Largest Online Hub of Free Books</h1>
      <p>Millions of books from globally trusted libraries. One search, one clean reader.</p>

      <form class="search" action="/read" method="get" role="search" aria-label="Search books">
        <input name="q" type="search" placeholder="Search millions of books…" aria-label="Search books">
        <button class="btn btn-primary" type="submit">Search</button>
      </form>

      <ul class="ticks">
        <li>✓ No ads</li>
        <li>✓ Free forever</li>
        <li>✓ Clean reading experience</li>
      </ul>
    </div>
  </header>

  <!-- Shelves -->
  <main class="container page-pad">
    <% const T = Array.isArray(trending)   ? trending   : []; %>
    <% const P = Array.isArray(philosophy) ? philosophy : []; %>
    <% const H = Array.isArray(history)    ? history    : []; %>

    <%- include('./partials/bookCarousel.ejs', { title: 'Trending now',     items: T, sectionClass: 'section--trending' }) %>
    <%- include('./partials/bookCarousel.ejs', { title: 'Philosophy Picks', items: P, sectionClass: 'section--philosophy' }) %>
    <%- include('./partials/bookCarousel.ejs', { title: 'History Picks',    items: H, sectionClass: 'section--history' }) %>
  </main>

  <%- include('./partials/footer.ejs') %>
</body>
</html>
