<body data-page="home">
  <%- include('./partials/nav.ejs') %>
  
  <!-- Hero Section -->
  <section class="everand-hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-headline">Read smarter.</h1>
        <p class="hero-subline">
          Access millions of free books from the world's greatest libraries. 
          One search, countless possibilities.
        </p>
        
        <!-- Hero Search -->
        <div class="hero-search">
          <form action="/read" method="GET" class="hero-search-form">
            <svg class="hero-search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input
              type="text"
              name="query"
              class="hero-search-input"
              placeholder="Search by title, author, topic..."
              aria-label="Search books"
            >
            <button type="submit" class="hero-search-submit">Search</button>
          </form>
        </div>
        
        <!-- Quick Links -->
        <div class="hero-links">
          <a href="/read?category=fiction" class="hero-link">Fiction</a>
          <a href="/read?category=philosophy" class="hero-link">Philosophy</a>
          <a href="/read?category=history" class="hero-link">History</a>
          <a href="/read?category=science" class="hero-link">Science</a>
          <a href="/read" class="hero-link">Browse All ‚Üí</a>
        </div>
      </div>
    </div>
  </section>

