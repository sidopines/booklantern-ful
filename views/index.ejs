      { id: 'social-contract', title: 'The Social Contract', author: 'Jean-Jacques Rousseau', cover: '/img/cover-fallback.svg', readUrl: '/read?id=social-contract', isbn: '9780486426761' },
      { id: 'discourse-method', title: 'Discourse on Method', author: 'Ren√© Descartes', cover: '/img/cover-fallback.svg', readUrl: '/read?id=discourse-method', isbn: '9780486637372' }
    ];

    const historyBooks = [
      { id: 'histories-herodotus', title: 'The Histories', author: 'Herodotus', cover: '/img/cover-fallback.svg', readUrl: '/read?id=histories-herodotus', isbn: '9780140449082' },
      { id: 'american-crisis', title: 'The American Crisis', author: 'Thomas Paine', cover: '/img/cover-fallback.svg', readUrl: '/read?id=american-crisis', isbn: '9780486295633' },
