<!doctype html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs', {
    pageTitle: 'BookLantern — Largest Online Hub of Free Books',
    pageDescription: 'Millions of books from globally trusted libraries. One search, one clean reader.'
  }) %>
</head>
<body>
  <%- include('./partials/navbar.ejs') %>

  <!-- Brighter hero (inline gradient tweak) -->
  <header class="hero" style="--hero-a: rgba(98, 110, 255, 0.28); --hero-b: rgba(196, 120, 255, 0.24);">
    <div class="container hero-inner">
      <h1 class="page-title">Largest Online Hub of Free Books</h1>
      <p class="page-sub">Millions of books from globally trusted libraries. One search, one clean reader.</p>

      <form action="/read" method="get" class="searchbar">
        <input type="text" name="q" placeholder="Search millions of books…" aria-label="Search books">
        <button class="btn btn-primary" type="submit">Search</button>
      </form>

      <div class="hero-bullets">
        <span>✔︎ No ads</span>
        <span>✔︎ Free forever</span>
        <span>✔︎ Clean reading experience</span>
      </div>
    </div>
  </header>

  <main class="container page-pad">
    <% const T = Array.isArray(trending) ? trending : []; %>
    <% const P = Array.isArray(philosophy) ? philosophy : []; %>
    <% const H = Array.isArray(history) ? history : []; %>

    <%- include('./partials/bookCarousel', { title: 'Trending now', items: T, sectionClass: 'section--trending' }) %>
    <%- include('./partials/bookCarousel', { title: 'Philosophy Picks', items: P, sectionClass: 'section--philosophy' }) %>
    <%- include('./partials/bookCarousel', { title: 'History Picks', items: H, sectionClass: 'section--history' }) %>
  </main>

  <%- include('./partials/footer.ejs') %>
</body>
</html>
