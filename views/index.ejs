<!doctype html>
<html lang="en">
<head>
  <%- include('./partials/head', { 
    pageTitle: 'Largest Online Hub of Free Books',
    pageDescription: 'Millions of free books from globally trusted libraries. One search, one clean reader.'
  }) %>
</head>
<body>
  <%- include('./partials/navbar') %>

  <header class="hero hero-soft">
    <div class="container">
      <h1>Largest Online Hub of Free Books</h1>
      <p class="sub">
        Millions of books from trusted libraries and archives. One search, one clean reader.
      </p>

      <form class="searchbar" action="/search" method="get">
        <input name="q" type="search" placeholder="Search millions of booksâ€¦" required>
        <button class="btn primary" type="submit">Search</button>
      </form>

      <ul class="checks">
        <li>No ads</li>
        <li>Free forever</li>
        <li>Clean reading experience</li>
      </ul>
    </div>
  </header>

  <main class="container stack">
    <section class="row">
      <div class="row-head">
        <h2>Trending now</h2>
      </div>
      <div class="carousel">
        <% trending.forEach(b => { %>
          <%- include('./partials/bookCard', { b }) %>
        <% }) %>
      </div>
    </section>

    <section class="row">
      <div class="row-head">
        <h2>Philosophy Picks</h2>
      </div>
      <div class="carousel">
        <% philosophy.forEach(b => { %>
          <%- include('./partials/bookCard', { b }) %>
        <% }) %>
      </div>
    </section>

    <section class="row">
      <div class="row-head">
        <h2>History Picks</h2>
      </div>
      <div class="carousel">
        <% history.forEach(b => { %>
          <%- include('./partials/bookCard', { b }) %>
        <% }) %>
      </div>
    </section>
  </main>

  <%- include('./partials/footer') %>
</body>
</html>
