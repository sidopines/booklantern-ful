<!doctype html>
<html lang="en">
<head>
  <%- include('./partials/head', { pageTitle: 'Login - BookLantern' }) %>
</head>
<body>
  <%- include('./partials/navbar') %>
  <%- include('./partials/backLink') %>

  <main class="auth-wrap">
    <h1>Login</h1>
    <p class="auth-sub">Welcome back.</p>

    <% if (messages && messages.error) { %>
      <div class="alert error"><%= messages.error %></div>
    <% } %>

    <form class="auth-form" method="post" action="/login">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <input type="hidden" name="next" value="<%= typeof next !== 'undefined' ? next : '/' %>">

      <label>Email</label>
      <input class="input lg" type="email" name="email" autocomplete="email" required>

      <label>Password</label>
      <input class="input lg" type="password" name="password" autocomplete="current-password" required>

      <label class="remember">
        <input type="checkbox" name="remember" value="1">
        <span>Remember me</span>
      </label>

      <button class="btn primary xl" type="submit">Sign in</button>
    </form>
 
