<!doctype html>
<html lang="en">
<head>
  <%- include('./partials/head', { pageTitle: 'Login - BookLantern' }) %>
</head>
<body>
  <%- include('./partials/navbar') %>
  <%- include('./partials/backLink', { referrer: referrer }) %>

  <main class="stack" style="--gap:20px; max-width:520px; margin:40px auto;">
    <h1>Login</h1>
    <% if (typeof error !== 'undefined') { %>
      <p class="alert error"><%= error %></p>
    <% } %>

    <form method="post" action="/login" class="card stack" style="--gap:12px; padding:16px;">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <input type="hidden" name="next" value="<%= typeof next !== 'undefined' ? next : '/' %>">

      <label>Email
        <input name="email" type="email" required placeholder="you@example.com" autocomplete="email">
      </label>

      <label>Password
        <input name="password" type="password" required placeholder="••••••••" autocomplete="current-password">
      </label>

      <button class="btn primary" type="submit">Login</button>
      <p class="muted">No account? <a href="/register">Create one</a></p>
    </form>
  </main>

  <%- include('./partials/footer') %>
</body>
</html>
