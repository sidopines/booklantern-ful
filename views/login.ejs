<%- include('./partials/head', { pageTitle: 'Login - BookLantern' }) %>
<body>
  <%- include('./partials/navbar') %>
  <%- include('./partials/backLink') %>

  <main class="stack" style="--gap:20px; max-width:520px; margin:40px auto;">
    <h1>Login</h1>
    <% const msgs = (typeof messages !== 'undefined' && messages) ? messages : {}; %>
    <% if (msgs.error) { %>
      <div class="alert error"><%= msgs.error %></div>
    <% } %>

    <form method="POST" action="/login" class="card stack" style="--gap:14px; padding:18px;">
      <input type="hidden" name="_csrf" value="<%= csrfToken || '' %>">
      <input type="hidden" name="next" value="<%= typeof next !== 'undefined' ? next : '/' %>">

      <label class="stack">
        <span>Email</span>
        <input style="font-size:18px" type="email" name="email" required autocomplete="email" placeholder="you@example.com">
      </label>

      <label class="stack">
        <span>Password</span>
        <input style="font-size:18px" type="password" name="password" required autocomplete="current-password" placeholder="••••••••">
      </label>

      <label style="display:flex; align-items:center; gap:8px;">
        <input type="checkbox" name="remember" value="1">
        <span>Remember me</span>
      </label>

      <button class="btn secondary" type="submit">Login</button>
    </form>
  </main>

  <%- include('./partials/footer') %>
</body>
</html>
