<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head', { pageTitle: 'Login • BookLantern' }) %>
</head>
<body class="theme-body">
  <%- include('partials/navbar') %>

  <main class="container mx-auto px-4 py-10">
    <section class="card shadow-sm rounded-2xl max-w-3xl mx-auto">
      <div class="p-6 md:p-8">
        <h1 class="text-3xl font-semibold mb-3">Sign in with email</h1>
        <p class="text-sm text-muted mb-4">
          We'll send you a magic link to sign in—no password needed.
        </p>

        <div class="space-y-4">
          <div class="rounded-xl border p-4">
            <label for="email" class="text-sm font-medium mb-2 block">Email address</label>
            <input 
              id="email" 
              type="email" 
              placeholder="your@email.com" 
              class="w-full rounded-lg border px-3 py-2 mb-3" 
              autocomplete="email"
              required>
            <button id="send-magic-btn" class="btn btn-primary w-full">Send magic link</button>
            <p id="message" class="text-sm mt-3"></p>
          </div>

          <div class="text-center text-sm text-muted">
            <p>Don't have an account? <a href="/register" class="text-primary">Sign up</a></p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <%- include('partials/footer') %>
  <%- include('partials/auth-boot') %>

  <script>
  (function () {
    const sb = window.supabaseClient;
    if (!sb) {
      console.error('[login] Supabase client not initialized');
      document.getElementById('message').textContent = 'Error: Auth client not loaded';
      document.getElementById('message').style.color = '#b00020';
      return;
    }

    const btn = document.getElementById('send-magic-btn');
    const emailInput = document.getElementById('email');
    const msg = document.getElementById('message');

    btn.addEventListener('click', async (e) => {
      e.preventDefault();
      const email = (emailInput.value || '').trim();
      
      if (!email) {
        msg.textContent = 'Please enter your email address.';
        msg.style.color = '#b00020';
        return;
      }

      btn.disabled = true;
      btn.textContent = 'Sending...';
      msg.textContent = '';

      const redirectTo = '<%= typeof redirectTo !== "undefined" ? redirectTo : "https://booklantern.org/auth/callback" %>';
      
      console.log('[login] Requesting magic link for:', email);
      console.log('[login] redirect_to:', redirectTo);

      try {
        const { error } = await sb.auth.signInWithOtp({ 
          email, 
          options: { emailRedirectTo: redirectTo }
        });

        if (error) {
          console.error('[login] OTP error:', error.message);
          msg.textContent = 'Error: ' + error.message;
          msg.style.color = '#b00020';
          btn.disabled = false;
          btn.textContent = 'Send magic link';
        } else {
          console.log('[login] ✓ Magic link sent successfully');
          msg.textContent = '✓ Magic link sent! Check your email (including spam folder).';
          msg.style.color = '#0a7e0a';
          emailInput.value = '';
        }
      } catch (ex) {
        console.error('[login] Exception:', ex);
        msg.textContent = 'Error: ' + (ex.message || 'Unknown error');
        msg.style.color = '#b00020';
        btn.disabled = false;
        btn.textContent = 'Send magic link';
      }
    });

    // Allow Enter key to submit
    emailInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        btn.click();
      }
    });
  })();
  </script>
</body>
</html>
