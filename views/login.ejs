<!doctype html>
<html lang="en">
<head>
  <%- include('./partials/head', {
    pageTitle: 'Login â€¢ BookLantern',
    pageDescription: 'Sign in via a secure email link.',
    canonicalUrl: (typeof canonicalUrl !== 'undefined' ? canonicalUrl : '')
  }) %>
</head>
<body>
  <%- include('./partials/navbar') %>

  <main class="container" style="max-width:700px; margin:28px auto; padding:0 16px;">
    <h1>Login</h1>
    <p class="ink-2">Use a one-time link we email to you, or continue with Google / Apple.</p>

    <!-- status banner -->
    <div id="banner" class="card" style="display:none; padding:10px; margin:12px 0;"></div>

    <form id="loginForm" class="card" style="padding:16px; margin-top:12px;" novalidate>
      <div class="stack" style="--gap:10px;">
        <input class="input" type="email" id="email" placeholder="you@example.com" autocomplete="email" required>

        <div class="row" style="gap:8px; flex-wrap:wrap;">
          <button class="btn btn-primary" type="submit" id="sendLinkBtn">Send sign-in link</button>
          <a class="btn" href="/register">Donâ€™t have an account? Create one</a>
        </div>

        <hr style="border:none; border-top:1px solid rgba(0,0,0,.08); margin:6px 0;">

        <div class="row" style="gap:8px; flex-wrap:wrap;">
          <button class="btn" id="google" type="button">Continue with Google</button>
          <button class="btn" id="apple" type="button">Continue with Apple</button>
        </div>

        <div id="msg" class="ink-2"></div>
      </div>
    </form>

    <p class="ink-2" style="margin-top:10px">
      Having trouble? Check your spam folder, or request another link.
    </p>
  </main>

  <%- include('./partials/footer') %>

  <script>
  (function(){
    const sb = window.supabaseClient;
    const banner = document.getElementById('banner');
    const msgEl = document.getElementById('msg');
    const sendLinkBtn = document.getElementById('sendLinkBtn');

    function setBanner(text, ok){
      if (!text) {
        banner.style.display='none';
        banner.textContent='';
        return;
      }
      banner.style.display='block';
      banner.textContent = text;
      banner.style.background = ok ? 'var(--green-1, #e6f7ed)' : 'var(--ink-1, #f5f5f5)';
      banner.style.border = '1px solid rgba(0,0,0,.08)';
    }
    function setMsg(t){ msgEl.textContent = t || ''; }
    function getBase(){ return (location.origin || '<%= process.env.SITE_URL || "" %>'); }

    // Show informational banners from query params (optional)
    (function(){
      try {
        const qp = new URLSearchParams(location.search);
        if (qp.has('confirmed')) setBanner('âœ… Your email has been verified. You can log in now.', true);
        if (qp.has('otp')) setBanner('ðŸ“¬ Check your inbox for your sign-in link.', false);
        if (qp.has('reset')) setBanner('ðŸ“¬ Check your inbox for a password email (if sent).', false);
      } catch(e) {}
    })();

    // --- Magic Link sign-in (no passwords) ---
    document.getElementById('loginForm').addEventListener('submit', async (e)=>{
      e.preventDefault();
      setMsg('');
      const email = document.getElementById('email').value.trim();
      if (!email) { setMsg('Enter your email.'); return; }

      sendLinkBtn.disabled = true;
      sendLinkBtn.textContent = 'Sendingâ€¦';

      const redirectTo = getBase() + '/auth/callback?type=magiclink';
      try {
        const { error } = await sb.auth.signInWithOtp({
          email,
          options: { emailRedirectTo: redirectTo }
        });
        if (error) {
          setMsg(error.message || 'Unable to send link.');
          sendLinkBtn.disabled = false;
          sendLinkBtn.textContent = 'Send sign-in link';
          return;
        }
        // Show banner and keep them here.
        const url = new URL(location.href);
        url.searchParams.set('otp', '1');
        history.replaceState({}, document.title, url.toString());
        setBanner('ðŸ“¬ Check your inbox for your sign-in link.', true);
        setMsg('');
        sendLinkBtn.disabled = false;
        sendLinkBtn.textContent = 'Send sign-in link';
      } catch (e) {
        setMsg('Something went wrong. Try again.');
        sendLinkBtn.disabled = false;
        sendLinkBtn.textContent = 'Send sign-in link';
      }
    });

    // --- OAuth ---
    document.getElementById('google').addEventListener('click', async ()=>{
      await sb.auth.signInWithOAuth({
        provider: 'google',
        options: { redirectTo: getBase() + '/auth/callback' }
      });
    });
    document.getElementById('apple').addEventListener('click', async ()=>{
      await sb.auth.signInWithOAuth({
        provider: 'apple',
        options: { redirectTo: getBase() + '/auth/callback' }
      });
    });
  })();
  </script>
</body>
</html>
