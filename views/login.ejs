<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head', { title: 'Login â€¢ BookLantern' }) %>
</head>
<body class="theme-body">
  <%- include('partials/navbar') %>

  <main class="container mx-auto px-4 py-10">
    <section class="card shadow-sm rounded-2xl max-w-3xl mx-auto">
      <div class="p-6 md:p-8">
        <h1 class="text-3xl font-semibold mb-3">Sign in</h1>
        <p id="status" class="text-sm text-muted mb-4">
          If you clicked a magic link in your email, this page will complete your sign-in automatically.
        </p>

        <!-- Fallback UI (hidden unless needed) -->
        <div id="fallback" class="hidden space-y-4">
          <div class="rounded-xl border p-4">
            <p class="text-sm mb-2">If your email client removed the code, paste your link below:</p>
            <input id="paste-url" type="url" placeholder="Paste your magic link URL" class="w-full rounded-lg border px-3 py-2" autocomplete="off">
            <button id="paste-go" class="btn btn-primary mt-2">Complete sign-in</button>
          </div>

          <div class="rounded-xl border p-4">
            <p class="text-sm mb-2">Or resend a new link:</p>
            <div class="flex gap-2">
              <input id="resend-email" type="email" placeholder="your@email.com" class="flex-1 rounded-lg border px-3 py-2" autocomplete="email">
              <button id="resend-btn" class="btn">Send magic link</button>
            </div>
            <p id="auth-error" style="margin-top:8px;color:#b00020;"></p>
            <p id="resend-note" class="text-xs text-muted mt-2"></p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <%- include('partials/footer') %>

  <%- include('partials/auth-boot') %>
  <script>
(function () {
  const sb   = window.supabaseClient;
  const form = document.querySelector('#emailLoginForm') || document.querySelector('form');
  const input= document.querySelector('#email-input')     || document.querySelector('#resend-email') || document.querySelector('input[type="email"]');
  const btn  = document.querySelector('#send-magic')      || document.querySelector('#resend-btn') || document.querySelector('button[type="submit"]');
  let   err  = document.querySelector('#auth-error');
  if (!err) { err = document.createElement('p'); err.id='auth-error'; err.style='margin-top:8px;color:#b00020;'; (form||document.body).appendChild(err); }

  if (!sb) { err.textContent = 'Auth client failed to load.'; return; }

  // If redirected from magic link or OAuth, Supabase will set the session automatically via detectSessionInUrl.
  sb.auth.getSession().then(({ data, error }) => {
    if (!error && data?.session) window.location.assign("/dashboard");
  });

  if (btn && input) {
    btn.addEventListener('click', async (e) => {
      e.preventDefault();
      err.textContent = '';
      const email = (input.value||'').trim();
      if (!email) { err.textContent = 'Please enter an email.'; return; }
      const { error } = await sb.auth.signInWithOtp({
        email,
        options: { emailRedirectTo: window.location.origin + '/login?confirmed=1' }
      });
      err.textContent = error ? error.message : 'Magic link sent. Check your email.';
    });
  }
})();
  </script>
</body>
</html>
