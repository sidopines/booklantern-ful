<%
  // views/login.ejs
  const pageTitle = "Login | BookLantern";
  const pageDescription = "Access your BookLantern account to read books, watch content, and manage your favorites.";
%>
<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs', { pageTitle, pageDescription }) %>
  <style>
    :root { --bg:#f6f7fb; --text:#111; --muted:#667085; --card:#ffffff; --border:#e5e7eb; --brand:#111; --brandHover:#333; --link:#1256b3; --error:#b42318; --success:#067647; }
    * { box-sizing: border-box; }
    body {
      margin: 0;
      background: var(--bg);
      color: var(--text);
      font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
    }
    .wrap { min-height: 100vh; display: flex; flex-direction: column; }
    .container {
      max-width: 420px;
      width: 100%;
      margin: 2rem auto 3rem;
      padding: 0 1rem;
    }
    .card {
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: 14px;
      box-shadow: 0 8px 28px rgba(0,0,0,.06);
      padding: 1.5rem;
    }
    h1 {
      text-align: center;
      margin: 0 0 1rem 0;
      font-size: 1.6rem;
      line-height: 1.2;
    }
    .lead {
      text-align: center;
      color: var(--muted);
      font-size: .95rem;
      margin-bottom: 1rem;
    }
    form { display: flex; flex-direction: column; gap: .85rem; margin-top: .25rem; }
    label { font-size: .9rem; color: var(--text); }
    input[type="email"], input[type="password"] {
      width: 100%;
      padding: .7rem .8rem;
      border: 1px solid var(--border);
      border-radius: 10px;
      background: #fff;
      font-size: 1rem;
      outline: none;
    }
    input:focus { border-color: #c7d2fe; box-shadow: 0 0 0 3px rgba(99,102,241,.15); }
    .btn {
      margin-top: .4rem;
      padding: .8rem 1rem;
      background: var(--brand);
      color: #fff;
      border: 0;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
    }
    .btn:hover { background: var(--brandHover); }
    .links { text-align: center; margin-top: 1rem; color: var(--muted); font-size: .95rem; }
    .links a { color: var(--link); text-decoration: none; }
    .links a:hover { text-decoration: underline; }

    .alert {
      border-radius: 10px;
      padding: .75rem .9rem;
      font-size: .95rem;
      margin-bottom: .8rem;
      border: 1px solid;
    }
    .alert.error { background: #fee4e2; color: var(--error); border-color: #fca5a5; }
    .alert.success { background: #ecfdf3; color: var(--success); border-color: #86efac; }

    footer { text-align: center; color: var(--muted); padding: 1.25rem 1rem 2rem; }
  </style>
</head>
<body>
  <%- include('./partials/navbar.ejs') %>

  <div class="wrap">
    <main class="container">
      <div class="card">
        <h1>Login</h1>
        <p class="lead">Welcome back! Sign in to continue.</p>

        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert error"><%= error %></div>
        <% } %>
        <% if (typeof message !== 'undefined' && message) { %>
          <div class="alert success"><%= message %></div>
        <% } %>

        <form action="/login" method="POST" novalidate>
          <div>
            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" required autocomplete="email" />
          </div>

          <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required autocomplete="current-password" />
          </div>

          <button class="btn" type="submit">Login</button>
        </form>

        <div class="links">
          <p><a href="/forgot-password">Forgot your password?</a></p>
          <p>Donâ€™t have an account? <a href="/register">Register here</a></p>
        </div>
      </div>
    </main>

    <footer>
      &copy; <%= new Date().getFullYear() %> BookLantern. All rights reserved.
    </footer>
  </div>
</body>
</html>
