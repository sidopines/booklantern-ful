<!-- Loads Supabase SDK and initialises a client using server-injected envs -->
<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
<script>
  window.__SUPABASE_URL__  = "<%= supabaseUrl %>";
  window.__SUPABASE_ANON__ = "<%= supabaseAnon %>";
  if (!window.__SUPABASE_URL__ || !window.__SUPABASE_ANON__) {
    console.error("[auth] Missing Supabase envs on page");
  } else {
    window.supabase = window.supabase || {};
    window.supabaseClient = window.supabase.createClient(window.__SUPABASE_URL__, window.__SUPABASE_ANON__);
  }
</script>
