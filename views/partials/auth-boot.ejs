<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
<script>
  (function () {
    const url  = "<%= typeof supabaseUrl  !== 'undefined' ? supabaseUrl  : '' %>";
    const anon = "<%= typeof supabaseAnon !== 'undefined' ? supabaseAnon : '' %>";
    if (!url || !anon) { console.error("[auth] Missing SUPABASE envs"); return; }
    window.supabaseClient = window.supabase.createClient(url, anon, {
      auth: { detectSessionInUrl: true, persistSession: true, autoRefreshToken: true }
    });
  })();
</script>
