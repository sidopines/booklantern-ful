<a
  class="back"
  href="<%= (typeof referrer !== 'undefined' && referrer) ? referrer : '/' %>"
  aria-label="Go back"
  onclick="if(document.referrer){history.back();return false;}"
  style="display:inline-flex;align-items:center;gap:8px;text-decoration:none;margin:10px 16px;color:var(--ink-muted);font-weight:500;"
>
  <span aria-hidden="true">←</span> Back
</a>
