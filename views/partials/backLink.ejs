<!-- views/partials/backLink.ejs - "â† Back" pattern with fallback -->
<%
  const backText = locals.text || 'Back';
  const fallbackHref = locals.fallback || '/';
%>

<a href="<%= fallbackHref %>" class="back-link" onclick="if(document.referrer && document.referrer !== window.location.href){event.preventDefault(); history.back();}">
  <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
  </svg>
  <%= backText %>
</a>

<style>
/* Back Link Styles */
.back-link {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  text-decoration: none;
  color: var(--ink-weak);
  font-weight: 500;
  font-size: 14px;
  padding: 8px 12px;
  border-radius: 8px;
  transition: all 0.2s ease;
  margin-bottom: 24px;
}

.back-link:hover {
  color: var(--brand);
  background: rgba(37, 99, 235, 0.1);
}

.back-link:focus {
  outline: 2px solid var(--ring);
  outline-offset: 2px;
}

.back-link svg {
  transition: transform 0.2s ease;
}

.back-link:hover svg {
  transform: translateX(-2px);
}
</style>
