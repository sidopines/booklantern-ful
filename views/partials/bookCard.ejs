<li class="card book-card" role="listitem" style="width: 180px;">
  <a class="book-card__thumb" href="<%= b.readUrl %>" aria-label="Read <%= b.title %>" style="text-decoration:none;">
    <!-- Fixed-ratio thumbnail wrapper: 140Ã—210 (2:3) -->
    <span
      style="
        display:block;
        width:140px; height:210px;
        border-radius:10px;
        overflow:hidden;
        background:#f3f3f3;
        box-shadow:0 1px 2px rgba(0,0,0,.06) inset;
      "
    >
      <img
        src="<%= b.cover_image || b.cover || '/public/img/placeholder-cover.svg' %>"
        alt="Cover of <%= b.title %>"
        loading="lazy"
        style="display:block; width:100%; height:100%; object-fit:cover;"
      />
    </span>
  </a>

  <div class="book-card__meta" style="margin-top:8px; width:140px;">
    <h3 class="book-card__title" style="font-size:14px; line-height:1.25; margin:0 0 4px;">
      <a href="<%= b.readUrl %>" style="text-decoration:none; color:inherit;"><%= b.title %></a>
    </h3>
    <% if (b.author) { %>
      <p class="book-card__author" style="margin:0 0 8px; color:#666; font-size:12px;"><%= b.author %></p>
    <% } %>
    <a class="btn btn-sm" href="<%= b.readUrl %>">Read</a>
  </div>
</li>
