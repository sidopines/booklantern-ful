<%
  const list         = (items && items.length) ? items : [];
  const _sectionClass = (typeof sectionClass !== 'undefined') ? sectionClass : '';
  const _title       = (typeof title !== 'undefined') ? title : 'Books';
%>

<section class="shelf <%= _sectionClass %>">
  <div class="shelf-head">
    <h2 class="shelf-title"><%= _title %></h2>
    <div class="shelf-ctrl">
      <button class="icon-btn prev" aria-label="Scroll left" data-dir="-1">‹</button>
      <button class="icon-btn next" aria-label="Scroll right" data-dir="1">›</button>
    </div>
  </div>

  <div class="shelf-track" role="list">
    <% list.forEach(it => { %>
      <%- include('./bookCard', { item: it }) %>
    <% }) %>
  </div>

  <% if (!list.length) { %>
    <div class="empty">Nothing here yet.</div>
  <% } %>
</section>
