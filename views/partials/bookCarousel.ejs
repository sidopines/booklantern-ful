<%
  const list = Array.isArray(items) ? items : [];
  const klass = typeof sectionClass !== 'undefined' ? sectionClass : '';
  const _title = typeof title !== 'undefined' ? title : 'Books';
  const uid = 'track_' + Math.random().toString(36).slice(2, 9);
%>

<section class="carousel <%= klass %>">
  <div class="row" style="align-items:center;justify-content:space-between;margin-bottom:10px;">
    <h2><%= _title %></h2>
    <% if (list.length > 0) { %>
      <div class="arrows">
        <button type="button" class="carousel-btn prev" aria-label="Previous" data-target="#<%= uid %>">‹</button>
        <button type="button" class="carousel-btn next" aria-label="Next" data-target="#<%= uid %>">›</button>
      </div>
    <% } %>
  </div>

  <% if (list.length) { %>
    <div id="<%= uid %>" class="carousel-track" role="list" aria-label="<%= _title %>">
      <% list.forEach(it => { %>
        <%- include('./bookCard.ejs', { item: it }) %>
      <% }) %>
    </div>
  <% } else { %>
    <div class="card">Nothing here yet.</div>
  <% } %>
</section>
