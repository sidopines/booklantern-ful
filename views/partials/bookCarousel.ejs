<%
  const list = (items && items.length) ? items : [];
  const sectionClass = typeof sectionClass !== 'undefined' ? sectionClass : '';
  const _title = typeof title !== 'undefined' ? title : 'Books';
%>
<section class="carousel <%= sectionClass %>">
  <div class="carousel-head">
    <h2><%= _title %></h2>
    <div class="carousel-controls">
      <button class="carousel-btn prev" type="button" aria-label="Previous">‹</button>
      <button class="carousel-btn next" type="button" aria-label="Next">›</button>
    </div>
  </div>

  <% if (!list.length) { %>
    <div class="muted">Nothing here yet.</div>
  <% } else { %>
    <div class="carousel-track" role="list" aria-label="<%= _title %>">
      <% list.forEach(function(it){ %>
        <%- include('./bookCard', { item: it }) %>
      <% }) %>
    </div>
  <% } %>
</section>
