<!-- ---------- ULTRA-EARLY AUTH FORWARDER (Safari-safe) ---------- -->
<!-- If URL carries Supabase auth tokens (hash or query), immediately send to /auth/callback. -->
<script>
(function forwardAuthNow(){
  try {
    var p = window.location.pathname || "/";
    // Already on callback? Do nothing.
    if (p === "/auth/callback") return;

    var search = window.location.search || "";
    var hash   = window.location.hash   || "";

    // Look for any auth indicators in search or hash
    var hasAuthInSearch = /[?&](code|type)=/i.test(search);
    var hasAuthInHash   = /(^#|[&#])(access_token|refresh_token|type=|code=)/i.test(hash);

    if (hasAuthInSearch || hasAuthInHash) {
      var target = "/auth/callback" + search + hash;

      // Try the strongest redirect first.
      try { window.location.assign(target); } catch(e){}

      // Fallback: replace (avoids back button loop)
      try { if (window.location.pathname !== "/auth/callback") window.location.replace(target); } catch(e){}

      // Last resort: schedule a retry very soon (Safari hash parsing race).
      setTimeout(function(){
        if (window.location.pathname !== "/auth/callback") {
          window.location.href = target;
        }
      }, 15);

      // Prevent the rest of the page from running while we redirect.
      return;
    }

    // As an additional safety: if we end up on /login with a giant hash, bounce anyway.
    if (p === "/login" && (window.location.hash || "").length > 1) {
      var fallbackTarget = "/auth/callback" + (window.location.search || "") + (window.location.hash || "");
      try { window.location.assign(fallbackTarget); } catch(e){}
      setTimeout(function(){
        if (window.location.pathname !== "/auth/callback") {
          window.location.href = fallbackTarget;
        }
      }, 15);
      return;
    }
  } catch (_e) {
    // If anything throws, try a very defensive redirect based on visible parts.
    try {
      var t = "/auth/callback" + (window.location.search || "") + (window.location.hash || "");
      if (window.location.pathname !== "/auth/callback") window.location.href = t;
    } catch(__) {}
  }
})();
</script>

<!-- If JS is blocked or crashes, attempt an immediate meta refresh to /auth/callback carrying the same URL parts. -->
<noscript>
  <meta http-equiv="refresh" content="0; url=/auth/callback">
</noscript>
<!-- ---------- END ULTRA-EARLY AUTH FORWARDER ---------- -->

<!-- Pre-paint theme init (no flash). -->
<script>
  (function () {
    try {
      var LS_KEY = 'bl-theme';
      var m = localStorage.getItem(LS_KEY) || 'auto';
      if (m === 'auto') {
        var prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
        m = prefersDark ? 'dark' : 'light';
      }
      document.documentElement.setAttribute('data-theme', m);
    } catch (e) {
      document.documentElement.setAttribute('data-theme', 'light');
    }
  })();
</script>

<!-- Supabase client (browser) -->
<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
<script>
  // Expose env to the client
  window.__SB_URL  = "<%= process.env.SUPABASE_URL || '' %>";
  window.__SB_ANON = "<%= process.env.SUPABASE_ANON_KEY || '' %>";

  // Create a single shared client with correct auth options.
  (function () {
    if (!window.__SB_URL || !window.__SB_ANON) {
      console.warn('[supabase] Missing SUPABASE_URL or SUPABASE_ANON_KEY in env.');
      window.supabaseClient = null;
      return;
    }

    var create = (window.supabase && window.supabase.createClient)
      ? window.supabase.createClient
      : (typeof supabase !== 'undefined' && supabase.createClient ? supabase.createClient : null);

    if (!create) {
      console.error('[supabase] createClient not found on window. Check CDN script loading.');
      window.supabaseClient = null;
      return;
    }

    window.supabaseClient = create(window.__SB_URL, window.__SB_ANON, {
      auth: {
        persistSession: true,
        autoRefreshToken: true,
        // We do URL handling ourselves on /auth/callback.
        detectSessionInUrl: false,
        flowType: 'implicit'
      }
    });
  })();
</script>

