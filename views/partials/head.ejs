<!doctype html>
<html lang="en" data-theme="auto">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Title & Description -->
  <title><%= pageTitle || 'BookLantern' %></title>
  <meta name="description" content="<%= pageDescription || 'Millions of free books from globally trusted libraries. One clean reader.' %>">

  <!-- Open Graph -->
  <meta property="og:title" content="<%= pageTitle || 'BookLantern' %>">
  <meta property="og:description" content="<%= pageDescription || 'Millions of free books from globally trusted libraries. One clean reader.' %>">
  <meta property="og:image" content="/img/social-card.png">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://booklantern.org">

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= pageTitle || 'BookLantern' %>">
  <meta name="twitter:description" content="<%= pageDescription || 'Millions of free books from globally trusted libraries. One clean reader.' %>">
  <meta name="twitter:image" content="/img/social-card.png">

  <!-- Favicon & PWA -->
  <link rel="icon" href="/favicon.ico" sizes="any">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  <link rel="manifest" href="/site.webmanifest">

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Soria&display=swap" rel="stylesheet">

  <!-- Styles -->
  <link rel="stylesheet" href="/public/css/site.css?v=<%= buildId %>">

  <!-- Scripts (defer ensures DOM is parsed first) -->
  <script src="/public/js/theme.js?v=<%= buildId %>" defer></script>
  <script src="/public/js/ui.js?v=<%= buildId %>" defer></script>
</head>
