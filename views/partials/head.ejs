<!-- Ultra-early auth forwarder -->
<script>
(function forwardAuthNow(){
  function hasAuthBits() {
    var s = window.location.search || "";
    var h = window.location.hash   || "";
    return /[?&](code|type|token_hash)=/i.test(s) || /(^#|[&#])(access_token|refresh_token|type=|code=)/i.test(h);
  }
  function go(t){
    try{window.location.assign(t);}catch(e){}
    try{if(window.location.pathname!=="/auth/callback")window.location.replace(t);}catch(e){}
    setTimeout(function(){if(window.location.pathname!=="/auth/callback")window.location.href=t;},120);
  }
  try{
    var p = window.location.pathname || "/";
    if (p === "/auth/callback") return;
    if (hasAuthBits()) { go("/auth/callback"+(window.location.search||"")+(window.location.hash||"")); return; }
    if (p === "/login" && (window.location.hash||"").length>1) {
      go("/auth/callback"+(window.location.search||"")+(window.location.hash||""));
      return;
    }
  }catch(_e){
    try{ if(window.location.pathname!=="/auth/callback") window.location.href="/auth/callback"; }catch(__){}
  }
})();
</script>
<noscript>
  <meta http-equiv="refresh" content="0; url=/auth/callback">
</noscript>

<!-- Pre-paint theme init (no flash). -->
<script>
  (function () {
    try {
      var LS_KEY = 'bl-theme';
      var m = localStorage.getItem(LS_KEY) || 'auto';
      if (m === 'auto') {
        var prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
        m = prefersDark ? 'dark' : 'light';
      }
      document.documentElement.setAttribute('data-theme', m);
    } catch (e) {
      document.documentElement.setAttribute('data-theme', 'light');
    }
  })();
</script>

<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
<script>
  window.__SB_URL  = "<%= process.env.SUPABASE_URL || '' %>";
  window.__SB_ANON = "<%= process.env.SUPABASE_ANON_KEY || '' %>";
  (function () {
    if (!window.__SB_URL || !window.__SB_ANON) {
      console.warn('[supabase] Missing SUPABASE_URL or SUPABASE_ANON_KEY in env.');
      window.supabaseClient = null;
      return;
    }
    var create = (window.supabase && window.supabase.createClient)
      ? window.supabase.createClient
      : (typeof supabase !== 'undefined' && supabase.createClient ? supabase.createClient : null);
    if (!create) {
      console.error('[supabase] createClient not found on window. Check CDN script loading.');
      window.supabaseClient = null;
      return;
    }
    window.supabaseClient = create(window.__SB_URL, window.__SB_ANON, {
      auth: { persistSession: true, autoRefreshToken: true, detectSessionInUrl: false, flowType: 'implicit' }
    });
  })();
</script>

