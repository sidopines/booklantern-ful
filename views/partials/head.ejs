<!-- views/partials/head.ejs -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<title><%= pageTitle || 'BookLantern' %></title>
<meta name="description" content="<%= pageDescription || 'Read and watch free educational content on BookLantern. Explore public domain books and videos in one place.' %>" />
<meta name="keywords" content="books, reading, archive, public domain, documentaries, education, BookLantern" />
<meta name="author" content="BookLantern" />

<!-- Open Graph / Facebook -->
<meta property="og:title" content="<%= pageTitle || 'BookLantern' %>" />
<meta property="og:description" content="<%= pageDescription || 'Explore free books and educational videos at BookLantern.org' %>" />
<meta property="og:type" content="website" />
<meta property="og:image" content="https://booklantern.org/logo.png" />
<meta property="og:url" content="<%= pageUrl || 'https://booklantern.org' %>" />

<!-- Favicon -->
<link rel="icon" href="/favicon.ico" type="image/x-icon" />
