<!-- Pre-paint theme init (no flash). -->
<script>
  (function () {
    try {
      var LS_KEY = 'bl-theme';
      var m = localStorage.getItem(LS_KEY) || 'auto';
      if (m === 'auto') {
        var prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
        m = prefersDark ? 'dark' : 'light';
      }
      document.documentElement.setAttribute('data-theme', m);
    } catch (e) {
      document.documentElement.setAttribute('data-theme', 'light');
    }
  })();
</script>

<!-- Supabase client (browser) -->
<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
<script>
  // Expose env to the client
  window.__SB_URL  = "<%= process.env.SUPABASE_URL || '' %>";
  window.__SB_ANON = "<%= process.env.SUPABASE_ANON_KEY || '' %>";

  // Create a single shared client with correct auth options.
  (function () {
    if (!window.__SB_URL || !window.__SB_ANON) {
      console.warn('[supabase] Missing SUPABASE_URL or SUPABASE_ANON_KEY in env.');
      window.supabaseClient = null;
      return;
    }

    var create = (window.supabase && window.supabase.createClient)
      ? window.supabase.createClient
      : (typeof supabase !== 'undefined' && supabase.createClient ? supabase.createClient : null);

    if (!create) {
      console.error('[supabase] createClient not found on window. Check CDN script loading.');
      window.supabaseClient = null;
      return;
    }

    window.supabaseClient = create(window.__SB_URL, window.__SB_ANON, {
      auth: {
        persistSession: true,
        autoRefreshToken: true,
        detectSessionInUrl: true,   // allow reading tokens from URL hash on first load
        // For email magic links, implicit works best; PKCE is used automatically for OAuth
        flowType: 'implicit'
      }
    });
  })();
</script>

<!-- Global forwarder safety net:
     If any page (not /auth/callback) receives auth params in URL, forward them. -->
<script>
  (function () {
    try {
      if (location.pathname === '/auth/callback') return;
      var q = location.search || "";
      var h = location.hash   || "";
      if (/#(?:.*access_token=|.*refresh_token=)/.test(h) || /[?&](code|token_hash)=/.test(q)) {
        location.replace('/auth/callback' + q + h);
      }
    } catch (_) {}
  })();
</script>

<!-- Theme toggle behavior -->
