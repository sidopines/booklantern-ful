<!-- views/partials/head.ejs -->
<%
  const t = (typeof pageTitle !== 'undefined' && pageTitle) ? pageTitle : 'BookLantern';
  const d = (typeof pageDescription !== 'undefined' && pageDescription) ? pageDescription : 'Free books & educational videos.';
  const baseUrl = process.env.BASE_URL || 'https://booklantern.org';
%>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<title><%= t %></title>
<meta name="description" content="<%= d %>">

<!-- Favicons / Icons -->
<link rel="icon" href="/favicon.ico" sizes="any">
<link rel="icon" href="/img/brand.svg" type="image/svg+xml">
<link rel="icon" href="/img/favicon-32.png" sizes="32x32">
<link rel="icon" href="/img/favicon-16.png" sizes="16x16">
<link rel="apple-touch-icon" href="/apple-touch-icon.png">
<link rel="manifest" href="/site.webmanifest">
<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#6c7cff">
<meta name="theme-color" content="#6c7cff">
<meta name="application-name" content="BookLantern">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-title" content="BookLantern">

<!-- Social preview -->
<meta property="og:type" content="website">
<meta property="og:title" content="<%= t %>">
<meta property="og:description" content="<%= d %>">
<meta property="og:image" content="<%= baseUrl %>/img/social-card.png">
<meta property="og:url" content="<%= baseUrl %>">
<meta property="og:site_name" content="BookLantern">

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="<%= t %>">
<meta name="twitter:description" content="<%= d %>">
<meta name="twitter:image" content="<%= baseUrl %>/img/social-card.png">

<!-- Performance & Fonts -->
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>

<!-- Core Styles -->
<link rel="stylesheet" href="/css/theme.css<%= buildId ? `?v=${buildId}` : '' %>">
<link rel="stylesheet" href="/css/site.css<%= buildId ? `?v=${buildId}` : '' %>">

<!-- Page-specific scripts (loaded via blocks) -->
<% if (typeof scripts !== 'undefined' && scripts) { %>
  <% scripts.forEach(script => { %>
    <%- script %>
  <% }) %>
<% } %>

        <!-- CDN Scripts with fallbacks (deferred) -->
        <script defer src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"
                onerror="var s=document.createElement('script'); s.src='/public/vendor/gsap.min.js?v=<%= buildId %>'; s.defer=true; document.head.appendChild(s);"></script>
        <script defer src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"
                onerror="var s=document.createElement('script'); s.src='/public/vendor/ScrollTrigger.min.js?v=<%= buildId %>'; s.defer=true; document.head.appendChild(s);"></script>
        <script defer src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"
                onerror="var s=document.createElement('script'); s.src='/public/vendor/three.r128.min.js?v=<%= buildId %>'; s.defer=true; document.head.appendChild(s);"></script>
        <script defer src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.10.2/lottie.min.js"
                onerror="var s=document.createElement('script'); s.src='/public/vendor/lottie.5.10.2.min.js?v=<%= buildId %>'; s.defer=true; document.head.appendChild(s);"></script>
        <script defer src="https://cdn.jsdelivr.net/npm/@studio-freight/lenis@1/bundled/lenis.min.js"
                onerror="var s=document.createElement('script'); s.src='/public/vendor/lenis.min.js?v=<%= buildId %>'; s.defer=true; document.head.appendChild(s);"></script>

<!-- Core UI Script -->
<script defer src="/js/ui.js<%= buildId ? `?v=${buildId}` : '' %>"></script>

<!-- Animation Boot System -->
<script>
  window.BL_BUILD_ID = '<%= buildId %>';
</script>
<script defer src="/js/scene-core.js<%= buildId ? `?v=${buildId}` : '' %>"></script>
