<!-- views/partials/head.ejs -->
<%
  // Build a safe cache-busting query once, even if nothing is passed in.
  const _buildId =
    (typeof buildId !== 'undefined' && buildId) ? String(buildId) :
    (typeof process !== 'undefined' && process?.env?.RENDER_GIT_COMMIT) ? process.env.RENDER_GIT_COMMIT :
    Date.now();

  const _q = `?v=${_buildId}`;

  // Safe page metadata fallbacks
  const _title = (typeof pageTitle !== 'undefined' && pageTitle) ? pageTitle : 'BookLantern';
  const _desc  = (typeof pageDescription !== 'undefined' && pageDescription) ? pageDescription : 'Discover millions of free books from globally trusted libraries. One search, one clean reader.';
  const baseUrl = process.env.BASE_URL || 'https://booklantern.org';
%>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<title><%= _title %></title>
<meta name="description" content="<%= _desc %>">

<!-- Favicons / Icons -->
<link rel="icon" href="/favicon.ico" sizes="any">
<link rel="icon" href="/img/brand.svg" type="image/svg+xml">
<link rel="icon" href="/img/favicon-32.png" sizes="32x32">
<link rel="icon" href="/img/favicon-16.png" sizes="16x16">
<link rel="apple-touch-icon" href="/apple-touch-icon.png">
<link rel="manifest" href="/site.webmanifest">
<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#6c7cff">
<meta name="theme-color" content="#6c7cff">
<meta name="application-name" content="BookLantern">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-title" content="BookLantern">

<!-- Social preview -->
<meta property="og:type" content="website">
<meta property="og:title" content="<%= _title %>">
<meta property="og:description" content="<%= _desc %>">
<meta property="og:image" content="<%= baseUrl %>/img/social-card.png">
<meta property="og:url" content="<%= baseUrl %>">
<meta property="og:site_name" content="BookLantern">

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="<%= _title %>">
<meta name="twitter:description" content="<%= _desc %>">
<meta name="twitter:image" content="<%= baseUrl %>/img/social-card.png">

<!-- Performance & Fonts -->
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>

<!-- Core Styles -->
<link rel="stylesheet" href="/css/site.css<%= _q %>">

<!-- Page-specific scripts (loaded via blocks) -->
<% if (typeof scripts !== 'undefined' && scripts) { %>
  <% scripts.forEach(script => { %>
    <%- script %>
  <% }) %>
<% } %>

<!-- Core UI Script -->
<script defer src="/js/ui.js<%= _q %>"></script>

<!-- Build ID for cache-busting -->
<script>
  window.BL_BUILD_ID = '<%= _buildId %>';
  window.BL_ANIM = '<%= typeof locals !== "undefined" && locals.ANIM ? locals.ANIM : "on" %>';
</script>
