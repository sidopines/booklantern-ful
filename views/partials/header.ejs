<!-- views/partials/header.ejs -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<title><%= pageTitle || 'BookLantern' %></title>
<meta name="description" content="<%= pageDescription || 'Free books & educational videos.' %>" />

<!-- Basic SEO/Open Graph -->
<meta property="og:title" content="<%= pageTitle || 'BookLantern' %>" />
<meta property="og:description" content="<%= pageDescription || 'Free books & educational videos.' %>" />
<meta property="og:type" content="website" />
<link rel="icon" href="/favicon.ico" />

<!-- Allow embedding Archive.org / Gutenberg (client-side CSP).
     If your server sends a stricter CSP header, that takes precedence. -->
<meta http-equiv="Content-Security-Policy" content="
  default-src 'self' https: data: blob:;
  img-src 'self' https: data: blob:;
  script-src 'self' 'unsafe-inline' https:;
  style-src 'self' 'unsafe-inline' https:;
  frame-src 'self' https://archive.org https://www.gutenberg.org https://gutenberg.org https://openlibrary.org https://*.openlibrary.org https://*.internetarchive.org https://iiif.archive.org;
  connect-src 'self' https:;
" />

<!-- Global styles -->
<link rel="stylesheet" href="/css/app.css" />
