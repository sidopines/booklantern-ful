<!-- Homepage Hero with Single Universal Search -->
<section class="hero">
  <div class="container">
    <div class="hero-content">
      <h1>Welcome to the largest hub of free books</h1>
      <p>Millions of books from globally trusted libraries. One search, one clean reader.</p>
      
      <!-- Single Universal Search -->
      <form class="search" action="/read" method="get">
        <input 
          type="text" 
          name="q" 
          placeholder="Search millions of books..."
          class="input"
          aria-label="Search books"
          value="<%= typeof query !== 'undefined' ? query : '' %>"
        >
        <button type="submit" class="btn">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
          Search
        </button>
      </form>

      <div class="hero-features">
        <span>✓ No ads</span>
        <span>✓ Free forever</span>
        <span>✓ Clean reading experience</span>
      </div>
    </div>
  </div>
</section>

<style>
/* Hero-specific styles */
.hero-content {
  text-align: center;
  max-width: 720px;
  margin: 0 auto;
}

.hero .search {
  margin: 32px auto;
  max-width: 580px;
}

.hero .search .input {
  flex: 1;
  height: 52px;
  font-size: 16px;
  padding: 0 20px;
  border: 2px solid #e5e7eb;
  border-radius: 26px;
  margin-right: 12px;
}

.hero .search .input:focus {
  border-color: var(--brand);
  box-shadow: 0 0 0 3px var(--ring);
}

.hero .search .btn {
  height: 52px;
  padding: 0 24px;
  border-radius: 26px;
  gap: 8px;
  white-space: nowrap;
}

.hero-features {
  display: flex;
  justify-content: center;
  gap: 24px;
  flex-wrap: wrap;
  font-size: 14px;
  color: var(--ink-weak);
  margin-top: 24px;
}

.hero-features span {
  display: flex;
  align-items: center;
  gap: 6px;
}

@media (max-width: 768px) {
  .hero .search {
    flex-direction: column;
    gap: 12px;
  }

  .hero .search .input {
    margin-right: 0;
  }

  .hero-features {
    gap: 16px;
    font-size: 13px;
  }
}
</style>