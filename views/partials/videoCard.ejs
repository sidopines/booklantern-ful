<%
// Video card with thumbnail, title, and Watch CTA - defensive programming
const video = (typeof locals.video !== 'undefined') ? locals.video : {};
const title = video.title || 'Untitled Video';
const description = video.description || '';
const thumbnail = video.thumbnail || '/img/video-fallback.svg';
const url = video.url || '#';
%>

<article class="video-card">
  <div class="video-thumbnail">
    <% if (thumbnail && thumbnail !== '/img/video-fallback.svg') { %>
      <img src="<%= thumbnail %>" alt="<%= title %> thumbnail" loading="lazy" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
      <div class="cover-ph" style="display:none;">
        <span>ðŸŽ¥</span>
      </div>
    <% } else { %>
      <div class="cover-ph">
        <span>ðŸŽ¥</span>
      </div>
    <% } %>
    <div class="video-overlay">
      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polygon points="5,3 19,12 5,21"></polygon>
      </svg>
    </div>
  </div>
  
  <div class="video-info">
    <h3 class="video-title"><%= title %></h3>
    <% if (description) { %>
      <p class="video-description"><%= description.substring(0, 100) %><%= description.length > 100 ? '...' : '' %></p>
    <% } %>
    
    <a href="<%= url %>" class="video-cta">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polygon points="5,3 19,12 5,21"></polygon>
      </svg>
      Watch
    </a>
  </div>
</article>