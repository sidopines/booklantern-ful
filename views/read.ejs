<%- include('./partials/head', { pageTitle: 'Explore Free Books' }) %>
<body>
  <%- include('./partials/navbar') %>
  <section class="hero">
    <div class="container stack" style="--gap:8px">
      <%- include('./partials/backLink') %>
      <h1>Explore Free Books</h1>
      <div class="muted">Millions of books from globally trusted libraries. One search, one clean reader.</div>
      <form action="/read" method="get" class="stack" style="flex-direction:row;gap:8px;margin-top:6px">
        <input class="input" name="q" placeholder="Search millions of books..." value="<%= (typeof q !== 'undefined') ? q : '' %>" />
        <button class="btn" type="submit">Search</button>
      </form>
    </div>
  </section>

  <main class="container stack" style="--gap:16px">
    <% if (items && items.length) { %>
      <section class="grid cols-4" role="list">
        <% items.forEach(item => { %>
          <%- include('./partials/bookCard', { item }) %>
        <% }) %>
      </section>
    <% } else { %>
      <div class="card" style="max-width:640px;margin:0 auto;text-align:center">Start by searching above.</div>
    <% } %>
  </main>

  <%- include('./partials/footer') %>
