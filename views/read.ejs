<%- include('./partials/head', { pageTitle: (book && book.title ? book.title + ' â€“ Read' : 'Read'), pageDescription: 'Read free books on BookLantern in a clean, distraction-free experience.' }) %>
<body>
  <%- include('./partials/navbar') %>

  <main class="container page-pad">
    <div class="reader-head">
      <div class="reader-title"><%= book?.title || 'Untitled' %></div>
      <div class="reader-src"><%= book?.provider ? book.provider.toUpperCase() : '' %></div>
    </div>

    <div class="reader-wrap">
      <!-- We proxy the source URL so the book stays on booklantern.org -->
      <iframe
        class="reader-iframe"
        src="/proxy?u=<%= encodeURIComponent(readerUrl) %>"
        referrerpolicy="no-referrer"
        sandbox="allow-scripts allow-same-origin allow-popups allow-forms"
      ></iframe>
    </div>
  </main>

  <%- include('./partials/footer') %>
  <script defer src="/public/js/ui.js?v=<%= buildId %>"></script>
</body>
</html>
