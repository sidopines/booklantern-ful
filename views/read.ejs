<!doctype html>
<html lang="en">
<head>
  <%- include('partials/head', {
    pageTitle: 'Read â€¢ BookLantern',
    pageDescription: 'Open any book and enjoy a peaceful, distraction-free reader.'
  }) %>
  <style>
    .reader-shell { max-width: 1100px; margin: 32px auto 56px; padding: 0 16px; }
    .reader-shell .pane { border:1px solid rgba(0,0,0,.08); border-radius:14px; padding:12px; min-height: 420px; background:#fff; }
    .reader-shell .muted { color:#666; font-size: 14px; }
    .reader-shell .row { display:flex; gap:16px; }
    .reader-shell .row > * { flex:1; }

    /* Staff picks */
    .section-head { display:flex; align-items:center; justify-content:space-between; gap:12px; margin:40px 0 14px; }
    .section-head h2 { margin:0; font-size:22px; line-height:1.2; }
    .book-grid { display:grid; grid-template-columns: repeat(auto-fill, minmax(190px, 1fr)); gap:14px; }
    .carousel { display:grid; grid-template-columns: repeat(auto-fill, minmax(190px, 1fr)); gap:14px; } /* reuse card styling */
    
    /* External-only badge for non-EPUB items */
    .book-card.external { position: relative; cursor: pointer; }
    .book-card .format-badge {
      position: absolute;
      top: 6px;
      right: 6px;
      background: rgba(0,0,0,0.7);
      color: #fff;
      font-size: 10px;
      padding: 2px 6px;
      border-radius: 4px;
      font-weight: 600;
      z-index: 1;
    }
    .book-card .format-badge.borrow {
      background: #b45309;
    }
    
    /* Provider badge */
    .book-card .provider-badge {
      position: absolute;
      top: 6px;
      left: 6px;
      background: rgba(255,255,255,0.9);
      color: #333;
      font-size: 9px;
      padding: 2px 5px;
      border-radius: 3px;
      font-weight: 500;
      text-transform: uppercase;
      z-index: 1;
    }
    .provider-gutenberg { background: #e0f2e9; color: #0f5132; }
    .provider-openlibrary { background: #f0f4ff; color: #3b5998; }
    .provider-archive { background: #fff3e0; color: #b8580a; }
    .provider-loc { background: #ffe4e4; color: #b12a2a; }
    .provider-oapen { background: #fef3c7; color: #92400e; }
    .provider-openstax { background: #dbeafe; color: #1e40af; }
    
    /* Placeholder cover for missing images */
    .book-card .card-cover-placeholder {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      aspect-ratio: 2/3;
      background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
      border-radius: 6px;
      color: #9ca3af;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="reader-shell">
    <h1 class="page-title">Read</h1>

    <div id="results" class="results-grid"></div>

    <%
      const providerSafe = typeof provider === 'string' ? provider : '';
      const idSafe = typeof id === 'string' ? id : '';
      const picks = Array.isArray(staffPicks) ? staffPicks : [];
    %>

    <% if (providerSafe && idSafe) { %>
      <div class="row">
        <section class="pane" id="reader"></section>
        <aside class="pane" id="notes"></aside>
      </div>
    <% } %>

    <!-- Staff picks grid -->
    <section style="margin-top:32px;">
      <div class="section-head">
        <h2>Staff picks</h2>
      </div>

      <% if (!picks.length) { %>
        <div class="card" style="padding:16px;">No staff picks yet.</div>
      <% } else { %>
        <div class="book-grid" role="list">
          <% picks.forEach(function (b) { %>
            <%- include('partials/bookCard', { b: b }) %>
          <% }) %>
        </div>
      <% } %>
    </section>
  </main>

  <%- include('partials/footer') %>

  <script>
  (async function () {
    const provider = "<%= providerSafe || '' %>";
    const id = "<%= idSafe || '' %>";
    if (!provider || !id) return;

    const KEY_POS   = `bl:pos:${provider}:${id}`;
    const KEY_NOTES = `bl:notes:${provider}:${id}`;

    try {
      const res = await fetch(`/api/book?provider=${encodeURIComponent(provider)}&id=${encodeURIComponent(id)}`);
      if (!res.ok) throw new Error('Book not found');
      const book = await res.json();
      document.getElementById('reader').textContent = book.title || 'Loaded.';
    } catch (e) {
      document.getElementById('reader').textContent = 'Failed to load book.';
    }
  })();
  </script>
  <script src="/public/js/read-search.js" defer></script>
</body>
</html>
