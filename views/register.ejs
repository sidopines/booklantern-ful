<%- include('./partials/head', { pageTitle: 'Register - BookLantern' }) %>
<body>
  <%- include('./partials/navbar') %>
  <%- include('./partials/backLink') %>

  <main class="stack" style="--gap:20px; max-width:520px; margin:40px auto;">
    <h1>Create your account</h1>
    <% const msgs = (typeof messages !== 'undefined' && messages) ? messages : {}; %>
    <% if (msgs.error) { %>
      <div class="alert error"><%= msgs.error %></div>
    <% } %>

    <form method="POST" action="/register" class="card stack" style="--gap:12px; padding:16px;">
      <input type="hidden" name="_csrf" value="<%= csrfToken || '' %>">

      <label class="stack">
        <span>Name</span>
        <input type="text" name="name" required placeholder="Your name">
      </label>

      <label class="stack">
        <span>Email</span>
        <input type="email" name="email" required autocomplete="email" placeholder="you@example.com">
      </label>

      <label class="stack">
        <span>Password</span>
        <input type="password" name="password" required autocomplete="new-password" placeholder="Choose a password">
      </label>

      <button class="btn primary" type="submit">Create account</button>
    </form>
  </main>

  <%- include('./partials/footer') %>
</body>
</html>
