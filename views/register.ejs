<%
  // views/register.ejs
  const pageTitle = "Register | BookLantern";
  const pageDescription = "Create your free BookLantern account to explore books, videos, and manage your reading.";
%>
<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs', { pageTitle, pageDescription }) %>
  <style>
    :root { --bg:#f6f7fb; --text:#111; --muted:#667085; --card:#ffffff; --border:#e5e7eb; --brand:#111; --brandHover:#333; --link:#1256b3; --error:#b42318; --success:#067647; }
    * { box-sizing: border-box; }
    body {
      margin: 0;
      background: var(--bg);
      color: var(--text);
      font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
    }
    .wrap { min-height: 100vh; display: flex; flex-direction: column; }
    .container {
      max-width: 480px;
      width: 100%;
      margin: 2rem auto 3rem;
      padding: 0 1rem;
    }
    .card {
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: 14px;
      box-shadow: 0 8px 28px rgba(0,0,0,.06);
      padding: 1.5rem;
    }
    h1 {
      text-align: center;
      margin: 0 0 1rem 0;
      font-size: 1.6rem;
      line-height: 1.2;
    }
    .lead {
      text-align: center;
      color: var(--muted);
      font-size: .95rem;
      margin-bottom: 1rem;
    }
    form { display: flex; flex-direction: column; gap: .85rem; margin-top: .25rem; }
    label { font-size: .9rem; color: var(--text); }
    input[type="text"], input[type="email"], input[type="password"] {
      width: 100%;
      padding: .7rem .8rem;
      border: 1px solid var(--border);
      border-radius: 10px;
      background: #fff;
      font-size: 1rem;
      outline: none;
    }
    input:focus { border-color: #c7d2fe; box-shadow: 0 0 0 3px rgba(99,102,241,.15); }
    .btn {
      margin-top: .4rem;
      padding: .85rem 1rem;
      background: var(--brand);
      color: #fff;
      border: 0;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
    }
    .btn:hover { background: var(--brandHover); }
    .links { text-align: center; margin-top: 1rem; color: var(--muted); font-size: .95rem; }
    .links a { color: var(--link); text-decoration: none; }
    .links a:hover { text-decoration: underline; }

    .alert {
      border-radius: 10px;
      padding: .75rem .9rem;
      font-size: .95rem;
      margin-bottom: .8rem;
      border: 1px solid;
    }
    .alert.error { background: #fee4e2; color: var(--error); border-color: #fca5a5; }
    .alert.success { background: #ecfdf3; color: var(--success); border-color: #86efac; }

    .back-link {
      display: inline-block;
      margin: 0.75rem 0 1rem;
      color: var(--link);
      font-size: 0.95rem;
      text-decoration: none;
      opacity: .95;
    }
    .back-link:hover { text-decoration: underline; }

    footer { text-align: center; color: var(--muted); padding: 1.25rem 1rem 2rem; }
  </style>
</head>
<body data-page="auth">
  <%- include('./partials/navbar.ejs') %>

  <!-- Auth Scene Background -->
  <div class="auth-background">
    <canvas id="auth3d" aria-hidden="true"></canvas>
    <div id="auth-lottie" hidden></div>
    <img id="auth-fallback" src="/img/auth-fallback.svg?v=<%= buildId %>" alt="" hidden />
  </div>

  <div class="wrap">
    <main class="container">
      <a href="javascript:history.back()" class="back-link">‚Üê Back</a>

      <div class="card">
        <h1>Create your account</h1>
        <p class="lead">Join BookLantern to read books, watch videos, and save your progress.</p>

        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert error"><%= error %></div>
        <% } %>
        <% if (typeof message !== 'undefined' && message) { %>
          <div class="alert success"><%= message %></div>
        <% } %>

        <form action="/register" method="POST" novalidate>
          <div>
            <label for="name">Full Name</label>
            <input
              type="text"
              id="name"
              name="name"
              value="<%= typeof name !== 'undefined' ? name : '' %>"
              required
              autocomplete="name" />
          </div>

          <div>
            <label for="email">Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              value="<%= typeof email !== 'undefined' ? email : '' %>"
              required
              autocomplete="email" />
          </div>

          <div>
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              required
              autocomplete="new-password" />
          </div>

          <button class="btn" type="submit">Create Account</button>
        </form>

        <div class="links">
          <p>Already have an account? <a href="/login">Login here</a></p>
        </div>
      </div>
    </main>

    <footer>
      &copy; <%= new Date().getFullYear() %> BookLantern. All rights reserved.
    </footer>
  </div>
</body>
</html>
