// views/read.ejs - Book Reading UI inspired by Everand
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ðŸ“š Read Books | BookLantern</title>
  <style>
    body {
      font-family: 'Georgia', serif;
      background-color: #fffaf5;
      color: #333;
      margin: 0;
      padding: 2rem;
    }
    h1 {
      text-align: center;
      margin-bottom: 2rem;
    }
    form {
      text-align: center;
      margin-bottom: 2rem;
    }
    input[type="text"] {
      width: 60%;
      padding: 0.6rem;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    button {
      padding: 0.6rem 1.2rem;
      margin-left: 1rem;
      font-size: 1rem;
      background-color: #222;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .book-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1.5rem;
      margin-top: 2rem;
    }
    .book-card {
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      padding: 1rem;
      text-align: center;
    }
    .book-card img {
      max-width: 100%;
      height: 280px;
      object-fit: cover;
      border-radius: 5px;
    }
    .book-card h3 {
      margin: 0.5rem 0;
    }
    .book-card a {
      text-decoration: none;
      color: #0077cc;
      font-weight: bold;
    }
    .book-card a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <h1>Explore Free Books</h1>

  <form action="/read" method="GET">
    <input type="text" name="query" placeholder="Search books by title or author" value="<%= query || '' %>" />
    <button type="submit">Search</button>
  </form>

  <div class="book-grid">
    <% books.forEach(book => { %>
      <div class="book-card">
        <img src="<%= book.cover %>" alt="<%= book.title %>" />
        <h3><%= book.title %></h3>
        <p><%= book.creator %></p>
        <a href="/read/book/<%= book.identifier %>" target="_blank">ðŸ“– Read Now</a>
      </div>
    <% }) %>
  </div>
</body>
</html>
