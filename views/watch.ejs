<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Watch - BookLantern</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <header>
    <div>ðŸ“š BookLantern</div>
    <nav>
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
      <a href="/watch">Watch</a>
      <a href="/admin">Admin</a>
      <a href="/login">Login</a>
      <a href="/register">Register</a>
    </nav>
    <div class="toggle-container">
      <label class="toggle-switch">
        <input type="checkbox" id="darkModeToggle" />
        <span class="slider"></span>
      </label>
    </div>
  </header>

  <main>
    <h1>ðŸŽ¬ Watch Library</h1>

    <!-- Search and Filter -->
    <div class="filter-container">
      <input type="text" id="searchInput" placeholder="Search videos..." />
      <select id="genreFilter">
        <option value="">All Genres</option>
        <% genres.forEach(genre => { %>
          <option value="<%= genre %>"><%= genre %></option>
        <% }) %>
      </select>
    </div>

    <!-- Video Grid -->
    <div class="video-grid" id="videoGrid">
      <% videos.forEach(video => { %>
        <div class="video-card" data-title="<%= video.title.toLowerCase() %>" data-genre="<%= video.genre.toLowerCase() %>">
          <iframe width="300" height="180" src="<%= video.youtubeUrl.replace('watch?v=', 'embed/') %>" frameborder="0" allowfullscreen></iframe>
          <p><strong><%= video.title %></strong></p>
          <p><%= video.genre %></p>
        </div>
      <% }) %>
    </div>
  </main>

  <footer>
    &copy; <%= new Date().getFullYear() %> BookLantern.org
  </footer>

  <script>
    const toggle = document.getElementById("darkModeToggle");
    toggle.addEventListener("change", () => {
      document.body.classList.toggle("dark-mode", toggle.checked);
    });

    // Genre filter and search logic
    const searchInput = document.getElementById("searchInput");
    const genreFilter = document.getElementById("genreFilter");
    const videoCards = document.querySelectorAll(".video-card");

    function filterVideos() {
      const search = searchInput.value.toLowerCase();
      const genre = genreFilter.value.toLowerCase();

      videoCards.forEach(card => {
        const title = card.dataset.title;
        const cardGenre = card.dataset.genre;

        const matchesSearch = title.includes(search);
        const matchesGenre = !genre || cardGenre === genre;

        card.style.display = matchesSearch && matchesGenre ? "block" : "none";
      });
    }

    searchInput.addEventListener("input", filterVideos);
    genreFilter.addEventListener("change", filterVideos);
  </script>
</body>
</html>
