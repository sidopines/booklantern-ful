<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs', {
    pageTitle: 'Watch Educational Videos - BookLantern',
    pageDescription: 'Stream free educational videos from trusted sources.'
  }) %>
</head>
<body data-page="watch">
  <%- include('./partials/navbar.ejs') %>
  
  <!-- Page Header -->
  <div class="page-header">
    <div class="container">
      <%- include('./partials/backLink.ejs', { text: 'Back', fallback: '/' }) %>
      <h1 class="page-title">Educational Videos</h1>
      <p class="page-subtitle">Explore curated educational content from trusted sources.</p>
    </div>
  </div>
  
  <!-- Video Grid -->
  <main class="content-section">
    <div class="container">
      <% if (typeof user !== 'undefined' && user && user.isAdmin) { %>
        <div class="admin-panel">
          <a href="/admin/videos" class="btn secondary">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
            </svg>
            Manage Videos
          </a>
        </div>
      <% } %>

      <% if (typeof videos !== 'undefined' && videos && videos.length > 0) { %>
        <div class="video-grid">
          <% videos.forEach(function(video) {
               // Extract YouTube ID and prepare video data
               const m = (video.youtubeUrl||'').match(/(?:v=|youtu\.be\/|embed\/|shorts\/)([A-Za-z0-9_-]{11})/);
               const ytId = m ? m[1] : '';
               const thumb = video.thumbnail || (ytId ? `https://img.youtube.com/vi/${ytId}/hqdefault.jpg` : '/img/video-fallback.svg');
               const videoData = {
                 title: video.title,
                 description: video.description || '',
                 thumbnail: thumb,
                 url: `/player/${video._id}`
               };
          %>
            <%- include('./partials/videoCard.ejs', { video: videoData }) %>
          <% }) %>
        </div>
      <% } else { %>
        <div class="empty-state">
          <div class="empty-icon">ðŸ“¹</div>
          <h3>No videos available yet</h3>
          <p>Check back soon for educational content, or contact us if you'd like to suggest videos.</p>
          <a href="/contact" class="btn">Suggest Content</a>
        </div>
      <% } %>
    </div>
  </main>

  <%- include('./partials/footer.ejs') %>
</body>
</html>

<style>
/* Watch page specific styles */
.admin-panel {
  margin-bottom: 32px;
  padding: 16px 0;
  border-bottom: 1px solid #eef0f4;
}

.empty-state {
  text-align: center;
  padding: 80px 24px;
  max-width: 480px;
  margin: 0 auto;
}

.empty-icon {
  font-size: 64px;
  margin-bottom: 24px;
  opacity: 0.8;
}

.empty-state h3 {
  font-size: 24px;
  color: var(--ink);
  margin: 0 0 12px;
}

.empty-state p {
  color: var(--ink-weak);
  line-height: 1.6;
  margin: 0 0 24px;
  font-size: 16px;
}

/* Video grid improvements */
.video-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 24px;
}

@media (max-width: 768px) {
  .video-grid {
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 20px;
  }
  
  .admin-panel {
    margin-bottom: 24px;
  }
  
  .empty-state {
    padding: 60px 16px;
  }
  
  .empty-icon {
    font-size: 56px;
  }
}

@media (max-width: 480px) {
  .video-grid {
    grid-template-columns: 1fr;
  }
}
</style>