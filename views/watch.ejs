<!doctype html>
<html lang="en">
<head>
  <%- include('./partials/head', {
    pageTitle: 'Watch â€¢ BookLantern',
    pageDescription: 'Educational videos and talks.'
  }) %>
</head>
<body>
  <%- include('./partials/navbar') %>

  <main>
    <section class="hero">
      <h1>Watch</h1>
      <p class="sub">Curated educational videos and talks.</p>
    </section>

    <% const list = Array.isArray(videos) ? videos : []; %>
    <% if (list.length) { %>
      <div class="grid" style="display:grid;grid-template-columns:repeat(auto-fill,minmax(260px,1fr));gap:16px;">
        <% list.forEach(v => { %>
          <article class="card">
            <div class="cover">
              <% if (v.thumbnail) { %>
                <img src="<%= v.thumbnail %>" alt="<%= v.title %>" loading="lazy" referrerpolicy="no-referrer">
              <% } else { %>
                <div class="cover-ph" style="height:140px"></div>
              <% } %>
            </div>
            <div class="meta">
              <h3 class="title"><%= v.title %></h3>
              <p class="author"><%= v.source || 'Video' %></p>
            </div>
            <div class="actions">
              <a class="btn primary" href="<%= v.url %>" target="_blank" rel="noopener">Watch</a>
            </div>
          </article>
        <% }) %>
      </div>
    <% } else { %>
      <div class="card empty">No videos yet.</div>
    <% } %>
  </main>

  <%- include('./partials/footer') %>
</body>
</html>
