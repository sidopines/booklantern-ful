<%- include('./partials/head', {
  pageTitle: (typeof pageTitle !== 'undefined' ? pageTitle : 'Educational Videos â€¢ BookLantern'),
  pageDescription: 'Curated educational videos and talks.'
}) %>
<body>
  <%- include('./partials/navbar') %>

  <section class="hero">
    <div class="inner">
      <h1>Watch</h1>
      <p>Curated educational videos and talks.</p>
    </div>
  </section>

  <main class="container" style="padding:18px 0 36px">
    <% if (items && items.length) { %>
      <div style="display:grid;grid-template-columns:repeat(4,minmax(0,1fr));gap:14px">
        <% items.forEach(function(v){ %>
          <article class="card" style="width:auto">
            <a href="<%= v.url || v.href || '#' %>" target="_blank" rel="noopener">
              <div class="cover" style="height:190px">
                <% if (v.thumb || v.thumbnail) { %>
                  <img src="<%= v.thumb || v.thumbnail %>" alt="<%= v.title || 'Video' %>">
                <% } else { %>
                  <div style="font-weight:800;font-size:22px;color:rgba(255,255,255,.35)">Video</div>
                <% } %>
              </div>
            </a>
            <div class="meta">
              <div class="title" title="<%= v.title || '' %>"><%= v.title || 'Untitled' %></div>
              <div class="actions">
                <a class="btn secondary" href="<%= v.url || v.href || '#' %>" target="_blank" rel="noopener">Watch</a>
              </div>
            </div>
          </article>
        <% }) %>
      </div>
    <% } else { %>
      <div class="muted">No videos yet. Add them in <code>data/videos.json</code> or via your Admin tool.</div>
    <% } %>
  </main>

  <%- include('./partials/footer') %>
