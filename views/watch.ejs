<!-- views/watch.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs', {
    pageTitle: 'Watch Educational Videos',
    pageDescription: 'Stream free educational videos in a Netflix-style interface. Curated content, no login required.'
  }) %>
  <style>
    :root { --bg:#111; --text:#fff; --muted:#ccc; --card:#222; --brand:#e50914; }
    * { box-sizing: border-box; }
    body {
      margin: 0;
      background-color: var(--bg);
      color: var(--text);
      font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
    }
    .back-link {
      display: inline-block;
      margin: 1rem 2rem;
      color: var(--text);
      text-decoration: none;
      font-size: 0.9rem;
      opacity: .85;
    }
    .back-link:hover { text-decoration: underline; opacity: 1; }

    .genre-select { margin: 0 2rem 0.5rem; }
    .genre-select label { color: var(--text); margin-right: 0.75rem; opacity:.9; }
    select {
      padding: 0.5rem 0.75rem;
      font-size: 1rem;
      border-radius: 6px;
      border: 1px solid #333;
      background: #1a1a1a;
      color: var(--text);
      outline: none;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: 1.5rem;
      padding: 1.25rem 2rem 2rem;
    }
    .card {
      background-color: var(--card);
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 2px 12px rgba(0,0,0,0.35);
      display: flex;
      flex-direction: column;
      transition: transform .15s ease, box-shadow .15s ease;
    }
    .card:hover { transform: translateY(-3px); box-shadow: 0 6px 20px rgba(0,0,0,0.45); }

    .thumb {
      width: 100%;
      aspect-ratio: 16/9;
      background: #0f0f0f;
      display: block;
    }
    .thumb img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }

    .card-content {
      padding: 1rem;
      display: flex;
      flex-direction: column;
      gap: .5rem;
      flex: 1;
    }
    .card-content h3 {
      margin: 0;
      font-size: 1.05rem;
      color: var(--text);
      line-height: 1.2;
    }
    .card-content p {
      font-size: 0.9rem;
      color: var(--muted);
      margin: 0;
    }
    .actions { margin-top: .25rem; }
    .watch-btn {
      margin-top: 0.5rem;
      display: inline-block;
      padding: 0.5rem 1rem;
      background-color: var(--brand);
      color: #fff;
      text-decoration: none;
      border-radius: 6px;
      font-weight: 600;
    }
    .empty {
      color: var(--muted);
      text-align: center;
      padding: 2rem;
      font-size: 1rem;
    }
  </style>
</head>
<body>
  <%- include('./partials/navbar.ejs') %>

  <a href="javascript:history.back()" class="back-link">← Back</a>

  <div class="genre-select">
    <form method="GET" action="/watch">
      <label for="genre">Filter by Genre:</label>
      <select name="genre" id="genre" onchange="this.form.submit()">
        <option value="">All Genres</option>
        <% (genres || []).forEach(function(g) { %>
          <option value="<%= g.name %>" <%= g.name === genreFilter ? 'selected' : '' %>><%= g.name %></option>
        <% }) %>
      </select>
    </form>
  </div>

  <% if (!videos || videos.length === 0) { %>
    <div class="empty">No videos found for this filter.</div>
  <% } %>

  <div class="grid">
    <% (videos || []).forEach(function(video) {
         // Safe YouTube ID extraction (handles youtu.be and youtube.com/watch?v=)
         const ytMatch = (video.youtubeUrl || '').match(/(?:youtu\.be\/|v=)([^&?#]+)/);
         const ytId = ytMatch ? ytMatch[1] : '';
         const fallbackThumb = ytId ? `https://img.youtube.com/vi/${ytId}/hqdefault.jpg` : '';
         const thumb = video.thumbnail || fallbackThumb;
    %>
      <div class="card">
        <a class="thumb" href="/player/<%= video._id %>">
          <% if (thumb) { %>
            <img src="<%= thumb %>" alt="<%= video.title %>" loading="lazy" referrerpolicy="no-referrer" />
          <% } %>
        </a>
        <div class="card-content">
          <h3><%= video.title %></h3>
          <% if (video.description) { %>
            <p><%= video.description %></p>
          <% } %>
          <div class="actions">
            <a href="/player/<%= video._id %>" class="watch-btn">▶ Watch Now</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>
