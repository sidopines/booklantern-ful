<%- include('./partials/head', { pageTitle: 'Watch — BookLantern' }) %>
<body>
  <%- include('./partials/navbar') %>

  <main class="container page-pad">
    <h1 class="page-title">Watch</h1>
    <p class="page-sub">Curated educational videos and talks.</p>

    <% if (Array.isArray(videos) && videos.length) { %>
      <section class="video-grid">
        <% videos.forEach(v => { %>
          <article class="card video-card">
            <a href="<%= v.url %>" target="_blank" rel="noopener" class="thumb">
              <% if (v.thumbnail) { %>
                <img src="<%= String(v.thumbnail).replace(/^http:/, 'https:') %>" alt="<%= v.title %> thumbnail">
              <% } else { %>
                <div class="cover ph"><span class="ph-initials">▶</span></div>
              <% } %>
            </a>
            <div class="meta">
              <div class="title" title="<%= v.title %>"><%= v.title %></div>
              <div class="author"><%= v.source || '' %></div>
            </div>
            <div class="actions">
              <a class="btn btn-primary" href="<%= v.url %>" target="_blank" rel="noopener">Watch</a>
            </div>
          </article>
        <% }) %>
      </section>
    <% } else { %>
      <div class="panel">No videos yet. Check back soon.</div>
    <% } %>
  </main>

  <%- include('./partials/footer') %>
</body>
</html>
