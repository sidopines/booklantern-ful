<%- include('./partials/head', { pageTitle: 'Watch - BookLantern' }) %>
<body>
  <%- include('./partials/navbar') %>

  <main class="stack" style="--gap:20px; max-width:1200px; margin:30px auto;">
    <h1>Watch</h1>

    <% const list = (Array.isArray(videos) ? videos : []); %>
    <% if (!list.length) { %>
      <div class="card" style="padding:16px;">No videos yet. (Add them in Admin.)</div>
    <% } else { %>
      <div class="grid" style="--cols:6; --gap:14px;">
        <% list.forEach(v => { %>
          <article class="book-card">
            <a class="cover" href="/watch/<%= v._id %>">
              <% if (v.thumbnail) { %>
                <img src="<%= v.thumbnail %>" alt="">
              <% } else { %>
                <img src="https://i.ytimg.com/vi/<%= v.videoId %>/hqdefault.jpg" alt="">
              <% } %>
            </a>
            <div class="meta">
              <div class="title"><%= v.title %></div>
              <div class="actions">
                <a class="btn small secondary" href="/watch/<%= v._id %>">Watch</a>
              </div>
            </div>
          </article>
        <% }) %>
      </div>
    <% } %>
  </main>

  <%- include('./partials/footer') %>
</body>
</html>
