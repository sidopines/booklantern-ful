<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Watch - BookLantern</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #111;
      padding: 15px 30px;
      color: #fff;
    }

    nav a {
      color: #fff;
      margin: 0 10px;
      text-decoration: none;
    }

    .toggle-container {
      display: flex;
      align-items: center;
    }

    .main-section {
      padding: 20px;
      background: #f4f4f4;
      min-height: 100vh;
    }

    .controls {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      margin-bottom: 20px;
    }

    select, input[type="text"] {
      padding: 8px;
      margin: 10px;
    }

    .video-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: 20px;
    }

    .video-card {
      background: white;
      border-radius: 10px;
      padding: 10px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .video-card h3 {
      margin: 10px 0 5px;
    }

    iframe {
      width: 100%;
      height: 180px;
      border: none;
      border-radius: 8px;
    }

    footer {
      text-align: center;
      padding: 15px;
      background: #222;
      color: #fff;
    }

    .dark-mode {
      background-color: #121212;
      color: white;
    }

    .dark-mode .video-card {
      background: #1e1e1e;
      color: white;
    }

    .dark-mode header, .dark-mode footer {
      background: #000;
    }
  </style>
</head>
<body>
  <header>
    <div>ðŸ“š BookLantern</div>
    <nav>
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
      <a href="/admin">Admin</a>
      <a href="/login">Login</a>
      <a href="/register">Register</a>
    </nav>
    <div class="toggle-container">
      <label class="toggle-switch">
        <input type="checkbox" id="darkModeToggle">
        <span class="slider"></span>
      </label>
    </div>
  </header>

  <main class="main-section">
    <div class="controls">
      <select id="genreFilter">
        <option value="">All Genres</option>
        <% 
          const uniqueGenres = [...new Set(videos.map(video => video.genre))]; 
          uniqueGenres.forEach(genre => { 
        %>
          <option value="<%= genre %>"><%= genre %></option>
        <% }); %>
      </select>

      <input type="text" id="searchInput" placeholder="Search videos..." />
    </div>

    <div class="video-grid" id="videoGrid">
      <% videos.forEach(video => { %>
        <div class="video-card" data-genre="<%= video.genre.toLowerCase() %>" data-title="<%= video.title.toLowerCase() %>">
          <iframe src="https://www.youtube.com/embed/<%= video.youtubeUrl.split('v=')[1] %>" allowfullscreen></iframe>
          <h3><%= video.title %></h3>
          <p><%= video.description || '' %></p>
        </div>
      <% }); %>
    </div>
  </main>

  <footer>
    &copy; <%= new Date().getFullYear() %> BookLantern. All rights reserved.
  </footer>

  <script>
    const toggle = document.getElementById('darkModeToggle');
    toggle.addEventListener('change', () => {
      document.body.classList.toggle('dark-mode', toggle.checked);
    });

    const genreFilter = document.getElementById('genreFilter');
    const searchInput = document.getElementById('searchInput');
    const videoCards = document.querySelectorAll('.video-card');

    genreFilter.addEventListener('change', filterVideos);
    searchInput.addEventListener('input', filterVideos);

    function filterVideos() {
      const selectedGenre = genreFilter.value.toLowerCase();
      const searchTerm = searchInput.value.toLowerCase();

      videoCards.forEach(card => {
        const matchesGenre = !selectedGenre || card.dataset.genre === selectedGenre;
        const matchesSearch = card.dataset.title.includes(searchTerm);
        card.style.display = (matchesGenre && matchesSearch) ? 'block' : 'none';
      });
    }
  </script>
</body>
</html>
