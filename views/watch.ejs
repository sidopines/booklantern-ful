<%- include('./partials/head', { pageTitle: 'Watch - BookLantern' }) %>
<body>
  <%- include('./partials/navbar') %>

  <main class="stack" style="--gap:24px; max-width:1100px; margin:30px auto;">
    <h1>Watch</h1>

    <% const list = (typeof videos !== 'undefined' && Array.isArray(videos)) ? videos : []; %>
    <% if (!list.length) { %>
      <div class="card" style="padding:16px;">
        No videos yet. (Your admin can add videos in the dashboard.)
      </div>
    <% } else { %>
      <div class="grid" style="--cols:4; --gap:16px;">
        <% list.forEach(v => { %>
          <article class="card video">
            <a class="cover" href="/watch/<%= v._id %>">
              <img src="<%= v.thumbnail || '/public/img/video-ph.jpg' %>" alt="">
            </a>
            <div class="stack" style="--gap:6px; padding:10px;">
              <strong><%= v.title %></strong>
              <a class="btn small" href="/watch/<%= v._id %>">Watch</a>
            </div>
          </article>
        <% }) %>
      </div>
    <% } %>
  </main>

  <%- include('./partials/footer') %>
</body>
</html>
