<!-- views/watch.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs', {
    pageTitle: 'Watch Educational Videos',
    pageDescription: 'Stream free educational videos.'
  }) %>
</head>
<body data-page="watch">
  <%- include('./partials/navbar.ejs') %>
  
  <!-- Page Header -->
  <div class="watch-header">
    <div class="watch-container">
      <%- include('./partials/backLink.ejs', { text: 'Back', fallback: '/' }) %>
      <h1 class="watch-title">Educational Videos</h1>
      <p class="watch-description">Explore curated educational content from trusted sources.</p>
    </div>
  </div>
  
  <!-- Video Grid -->
  <main class="watch-main">
    <div class="watch-container">
      <% if (typeof user !== 'undefined' && user && user.isAdmin) { %>
        <div class="admin-controls">
          <a href="/admin/videos" class="admin-link">Admin: Manage Videos</a>
        </div>
      <% } %>

      <div class="video-grid">
        <% if (typeof videos !== 'undefined' && videos && videos.length > 0) { %>
          <% videos.forEach(function(video){
               const m = (video.youtubeUrl||'').match(/(?:v=|youtu\.be\/|embed\/|shorts\/)([A-Za-z0-9_-]{11})/);
               const ytId = m ? m[1] : '';
               const thumb = video.thumbnail || (ytId ? `https://img.youtube.com/vi/${ytId}/hqdefault.jpg` : '');
               const videoData = {
                 title: video.title,
                 description: video.description || '',
                 thumbnail: thumb,
                 url: `/player/${video._id}`
               };
          %>
            <%- include('./partials/videoCard.ejs', { video: videoData }) %>
          <% }) %>
        <% } else { %>
          <div class="no-videos">
            <h3>No videos available</h3>
            <p>Check back later for educational content.</p>
          </div>
        <% } %>
      </div>
    </div>
  </main>

  <%- include('./partials/footer.ejs') %>
</body>
</html>

<style>
/* Watch Page Styles */
.watch-header {
  background: var(--surface);
  border-bottom: 1px solid var(--line);
  padding: 32px 0;
}

.watch-container {
  max-width: var(--container);
  margin: 0 auto;
  padding: 0 24px;
}

.watch-title {
  font-size: var(--h1);
  font-weight: 600;
  color: var(--ink);
  margin: 16px 0 8px;
}

.watch-description {
  color: var(--ink-weak);
  font-size: 18px;
  margin: 0;
}

.watch-main {
  padding: 48px 0;
}

.admin-controls {
  margin-bottom: 32px;
}

.admin-link {
  display: inline-block;
  background: var(--ink);
  color: white;
  padding: 12px 20px;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 500;
  transition: all 0.2s ease;
}

.admin-link:hover {
  background: var(--brand);
  transform: translateY(-1px);
}

.video-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 24px;
}

.no-videos {
  grid-column: 1 / -1;
  text-align: center;
  padding: 48px 24px;
  color: var(--ink-weak);
}

.no-videos h3 {
  color: var(--ink);
  margin-bottom: 8px;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .video-grid {
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 16px;
  }
  
  .watch-header {
    padding: 24px 0;
  }
  
  .watch-main {
    padding: 32px 0;
  }
}

@media (max-width: 480px) {
  .video-grid {
    grid-template-columns: 1fr;
  }
}
</style>
